<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="catprodrows">
  <div class="catprodrows__container page-width">

    {% for block in section.blocks %}
      {% assign col = collections[block.settings.collection] %}
      {% if col != blank and col.products.size > 0 %}
        
        <div class="catprodrows__section" {{ block.shopify_attributes }}>
          
          {%- comment -%} Category Header {%- endcomment -%}
          <div class="catprodrows__head">
            <h2 class="catprodrows__title">{{ col.title }}</h2>
            <a href="{{ col.url }}" class="catprodrows__more">
              View all →
            </a>
          </div>

          {%- comment -%} Products Slider {%- endcomment -%}
          <div class="catprodrows__swiper swiper swiper-{{ block.id }}">
            <div class="swiper-wrapper">
              {% for product in col.products limit: 12 %}
                <div class="catprodrows__card swiper-slide">
                  
                  <a href="{{ product.url }}" class="catprodrows__img">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                      >
                    {% endif %}
                  </a>

                  <div class="catprodrows__info">
                    <a href="{{ product.url }}">
                      <h3>{{ product.title }}</h3>
                    </a>

                    <div class="catprodrows__price">
                      {{ product.price | money }}
                    </div>

                    <div class="catprodrows__actions">
                      {%- comment -%} Counter {%- endcomment -%}
                      <div class="qty qty--modern">
                        <button type="button" class="qty__btn" data-action="minus">−</button>
                        <input type="number" name="quantity" value="1" min="1" class="qty__input">
                        <button type="button" class="qty__btn" data-action="plus">+</button>
                      </div>

                      {%- comment -%} Cart Button {%- endcomment -%}
                      <button type="button" 
                              class="catprodrows__cartbtn" 
                              aria-label="Add to cart"
                              data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                              data-product-title="{{ product.title | escape }}"
                              data-product-image="{{ product.featured_image | image_url: width: 100 }}"
                              data-product-price="{{ product.price | money }}"
                              onclick="addToCartAjax(this)">
                        <svg viewBox="0 0 24 24" fill="none" class="cart-icon">
                          <path d="M3 3h2l2.2 11.4a2 2 0 0 0 2 1.6h7.5a2 2 0 0 0 2-1.6L21 7H6"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          <circle cx="10" cy="20" r="1.5" fill="currentColor"/>
                          <circle cx="18" cy="20" r="1.5" fill="currentColor"/>
                        </svg>
                        <svg viewBox="0 0 24 24" fill="none" class="check-icon" style="display:none;">
                          <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </button>
                    </div>
                  </div>

                </div>
              {% endfor %}
            </div>
          </div>

        </div>
      {% endif %}
    {% endfor %}

  </div>
</section>

<!-- Toast Notification -->
<div id="cart-notification" class="cart-notification">
  <div class="cart-notification__content">
    <div class="cart-notification__icon">
      <svg viewBox="0 0 24 24" fill="none">
        <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <div class="cart-notification__text">
      <strong>Added to cart!</strong>
      <span class="cart-notification__details"></span>
    </div>
  </div>
</div>

