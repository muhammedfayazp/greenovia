.qty--modern .qty__btn:hover{
  background:#1f3d2b;
  color: #fff;
}
.qty--modern .qty__btn:active{
  transform: scale(0.95);
}
.qty--modern .qty__display{
  min-width:32px;
  text-align:center;
  font-size:16px;
  font-weight:700;
  color:#1f3d2b;
