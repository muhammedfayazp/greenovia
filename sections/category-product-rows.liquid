<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="catprodrows">
  <div class="catprodrows__container page-width">

    {% for block in section.blocks %}
      {% assign col = collections[block.settings.collection] %}
      {% if col != blank and col.products.size > 0 %}
        
        <div class="catprodrows__section" {{ block.shopify_attributes }}>
          
          {%- comment -%} Category Header {%- endcomment -%}
          <div class="catprodrows__head">
            <h2 class="catprodrows__title">{{ col.title }}</h2>
            <a href="{{ col.url }}" class="catprodrows__more">
              View all →
            </a>
          </div>

          {%- comment -%} Products Slider {%- endcomment -%}
          <div class="catprodrows__swiper swiper swiper-{{ block.id }}">
            <div class="swiper-wrapper">
              {% for product in col.products limit: 12 %}
                <div class="catprodrows__card swiper-slide">
                  
                  {%- comment -%} Wishlist Button {%- endcomment -%}
                  <button type="button" 
                          class="catprodrows__wishlist" 
                          aria-label="Add to wishlist"
                          data-product-id="{{ product.id }}"
                          data-product-handle="{{ product.handle }}"
                          onclick="toggleWishlist(this)">
                    <svg viewBox="0 0 24 24" fill="none" class="heart-outline">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" 
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <svg viewBox="0 0 24 24" fill="currentColor" class="heart-filled" style="display:none;">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                  </button>
                  
                  <a href="{{ product.url }}" class="catprodrows__img">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                      >
                    {% endif %}
                  </a>

                  <div class="catprodrows__info">
                    <a href="{{ product.url }}">
                      <h3>{{ product.title }}</h3>
                    </a>

                    <div class="catprodrows__bottom">
                      {%- comment -%} Price on Left {%- endcomment -%}
                      <div class="catprodrows__price">
                        {{ product.price | money }}
                      </div>

                      {%- comment -%} Actions on Right {%- endcomment -%}
                      <div class="catprodrows__actions" data-variant-id="{{ product.selected_or_first_available_variant.id }}">
                        
                        {%- comment -%} Counter - Hidden by default {%- endcomment -%}
                        <div class="qty qty--modern" style="display:none;">
                          <button type="button" class="qty__btn" data-action="minus" onclick="updateCartQuantity(this, 'minus')">−</button>
                          <span class="qty__display">0</span>
                          <button type="button" class="qty__btn" data-action="plus" onclick="updateCartQuantity(this, 'plus')">+</button>
                        </div>

                        {%- comment -%} Add to Cart Button {%- endcomment -%}
                        <button type="button" 
                                class="catprodrows__cartbtn" 
                                aria-label="Add to cart"
                                data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                                data-product-title="{{ product.title | escape }}"
                                onclick="addToCartAjax(this)">
                          <svg viewBox="0 0 24 24" fill="none">
                            <path d="M3 3h2l2.2 11.4a2 2 0 0 0 2 1.6h7.5a2 2 0 0 0 2-1.6L21 7H6"
                              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <circle cx="10" cy="20" r="1.5" fill="currentColor"/>
                            <circle cx="18" cy="20" r="1.5" fill="currentColor"/>
                          </svg>
                          <span class="catprodrows__cartbtn-text">Add</span>
                        </button>
                      </div>
                    </div>
                  </div>

                </div>
              {% endfor %}
            </div>
          </div>

        </div>
      {% endif %}
    {% endfor %}

  </div>
</section>

<!-- Toast Notification -->
<div id="cart-notification" class="cart-notification">
  <div class="cart-notification__content">
    <div class="cart-notification__icon">
      <svg viewBox="0 0 24 24" fill="none">
        <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <div class="cart-notification__text">
      <strong>Added to cart!</strong>
      <span class="cart-notification__details"></span>
    </div>
  </div>
</div>

<style>
.catprodrows{
  background:#f6f7f2;
  padding: 30px 0 50px;
}
.catprodrows__container{
  padding-left: 24px !important;
  padding-right: 24px !important;
}

/* Each category section */
.catprodrows__section{
  margin-bottom: 50px;
}
.catprodrows__section:last-child{
  margin-bottom: 0;
}

/* Category Header */
.catprodrows__head{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom: 26px;
}
.catprodrows__title{
  margin:0;
  font-size: 28px;
  color:#1f3d2b;
}
.catprodrows__more{
  font-size:14px;
  color:#1f3d2b;
  text-decoration:none;
  white-space:nowrap;
}
.catprodrows__more:hover{ text-decoration: underline; }

/* Swiper */
.catprodrows__swiper{ width:100%; }

/* Product Card */
.catprodrows__card{
  height:100%;
  display:flex;
  flex-direction:column;
  background:#fff;
  border-radius:18px;
  overflow:hidden;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  transition: transform .25s ease;
  position: relative;
}
.catprodrows__card:hover{
  transform: translateY(-4px);
}

