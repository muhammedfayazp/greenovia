    font-size: 14px;
  }
}
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
// Wishlist functionality
function toggleWishlist(button) {
  const productId = button.dataset.productId;
  const productHandle = button.dataset.productHandle;
  
  let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
  const index = wishlist.findIndex(item => item.id === productId);
  
  if (index > -1) {
    wishlist.splice(index, 1);
    button.classList.remove('active');
  } else {
    wishlist.push({
      id: productId,
      handle: productHandle,
      addedAt: new Date().toISOString()
    });
    button.classList.add('active');
  }
  
  localStorage.setItem('wishlist', JSON.stringify(wishlist));
  
  const notification = document.getElementById('cart-notification');
  const wasActive = index > -1;
  notification.querySelector('.cart-notification__text strong').textContent = 
    wasActive ? 'Removed from wishlist' : 'Added to wishlist!';
  notification.querySelector('.cart-notification__details').textContent = '';
  notification.classList.add('show');
  
  setTimeout(() => {
    notification.classList.remove('show');
    notification.querySelector('.cart-notification__text strong').textContent = 'Added to cart!';
  }, 2000);
}

function loadWishlist() {
  const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
  wishlist.forEach(item => {
    const button = document.querySelector(`[data-product-id="${item.id}"]`);
    if (button) {
      button.classList.add('active');
    }
  });
}

// Show toast notification
function showCartNotification(productTitle, quantity) {
  const notification = document.getElementById('cart-notification');
  const details = notification.querySelector('.cart-notification__details');
  details.textContent = `${quantity} × ${productTitle}`;
  
  notification.classList.add('show');
  
  setTimeout(() => {
    notification.classList.remove('show');
  }, 3000);
}

// Update cart quantity (+ and - buttons)
function updateCartQuantity(button, action) {
  const actionsContainer = button.closest('.catprodrows__actions');
  const variantId = actionsContainer.dataset.variantId;
  const qtyDisplay = actionsContainer.querySelector('.qty__display');
  let currentQty = parseInt(qtyDisplay.textContent) || 0;
  
  button.disabled = true;
  
  if (action === 'plus') {
    currentQty++;
  } else if (action === 'minus') {
    currentQty--;
  }
  
  // If quantity is 0, remove from cart and show Add button again
  if (currentQty <= 0) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: variantId,
        quantity: 0
      })
    })
    .then(response => response.json())
    .then(cart => {
      // Hide counter, show Add button
      actionsContainer.querySelector('.qty--modern').classList.remove('show');
      actionsContainer.querySelector('.catprodrows__cartbtn').classList.remove('hide');
      updateHeaderCartCount(cart.item_count);
      button.disabled = false;
    })
    .catch(error => {
      console.error('Error:', error);
      button.disabled = false;
    });
    return;
  }
  
  // Update cart quantity
  fetch('/cart/change.js', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      id: variantId,
      quantity: currentQty
    })
  })
  .then(response => response.json())
  .then(cart => {
    qtyDisplay.textContent = currentQty;
    updateHeaderCartCount(cart.item_count);
    button.disabled = false;
  })
  .catch(error => {
    console.error('Error:', error);
    button.disabled = false;
  });
}

// Update header cart count - COMPREHENSIVE UPDATE
function updateHeaderCartCount(itemCount) {
  // Log for debugging
  console.log('Updating header cart count to:', itemCount);
  
  // List of all possible cart count selectors
  const selectors = [
    '.cart-count',
    '[data-cart-count]',
    '.cart__count',
    '#cart-count',
    '.cart-link__bubble',
    '.header__icon--cart span',
    '.site-header__cart-count',
    '.cart-count-bubble',
    '[data-header-cart-count]',
    '.js-cart-count',
    'cart-count-bubble',
    '.cart-item-count',
    '#CartCount',
    '.header-cart-count',
    '.cart-link__count',
    '.header__cart-count',
    '#cart-item-count',
    '.cartToggle__count',
    '[aria-label*="cart"] span',
    'a[href="/cart"] span',
    'a[href*="cart"] span'
  ];
  
  let foundElements = 0;
  
  selectors.forEach(selector => {
    try {
      const elements = document.querySelectorAll(selector);
      elements.forEach(element => {
        // Skip if this is inside our product cards
        if (element.closest('.catprodrows__card')) return;
        
        element.textContent = itemCount;
        element.innerText = itemCount;
        
        // Update data attributes
        if (element.hasAttribute('data-cart-count')) {
          element.setAttribute('data-cart-count', itemCount);
        }
        
        // Show/hide based on count
        if (itemCount > 0) {
          element.style.display = '';
          element.style.opacity = '1';
          element.style.visibility = 'visible';
          element.classList.remove('hidden', 'hide');
        } else {
          // Some themes hide the badge when count is 0
          const hideWhenEmpty = element.classList.contains('hide-when-empty') || 
                                element.hasAttribute('data-hide-when-empty');
          if (hideWhenEmpty) {
            element.style.display = 'none';
          }
        }
        
        foundElements++;
      });
    } catch (e) {
      // Silently fail for invalid selectors
    }
  });
  
  console.log('Updated', foundElements, 'cart count elements');
  
  // Trigger Shopify theme events
  document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', {
    bubbles: true,
    detail: { itemCount: itemCount }
  }));
  
  // For themes that use custom events
  window.dispatchEvent(new CustomEvent('cart:updated', {
    detail: { itemCount: itemCount }
  }));
  
  // Trigger jQuery events if jQuery is available
  if (window.jQuery) {
    jQuery(document).trigger('cart.updated', [itemCount]);
  }
}

// Load cart state on page load
function loadCartState() {
  fetch('/cart.js')
    .then(res => res.json())
    .then(cart => {
      console.log('Current cart:', cart);
      
      // Update each product card based on cart
      document.querySelectorAll('.catprodrows__actions').forEach(actionsContainer => {
        const variantId = actionsContainer.dataset.variantId;
        const cartItem = cart.items.find(item => item.variant_id == variantId);
        
        if (cartItem && cartItem.quantity > 0) {
          // Show counter, hide Add button
          const counter = actionsContainer.querySelector('.qty--modern');
          const addBtn = actionsContainer.querySelector('.catprodrows__cartbtn');
          const qtyDisplay = actionsContainer.querySelector('.qty__display');
          
          qtyDisplay.textContent = cartItem.quantity;
          counter.classList.add('show');
          addBtn.classList.add('hide');
        }
      });
      
      // Update header cart count
      updateHeaderCartCount(cart.item_count);
    })
    .catch(err => {
      console.error('Failed to load cart state:', err);
    });
}

// Add to Cart - First click
function addToCartAjax(button) {
  const variantId = button.dataset.variantId;
  const productTitle = button.dataset.productTitle;
  const actionsContainer = button.closest('.catprodrows__actions');
  
  button.disabled = true;
  
  fetch('/cart/add.js', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      items: [{
        id: variantId,
        quantity: 1
      }]
    })
  })
  .then(response => {
    if (!response.ok) throw new Error('Failed to add to cart');
    return response.json();
  })
  .then(data => {
    console.log('Added to cart:', data);
    
    // Hide Add button, show counter
    button.classList.add('hide');
    const counter = actionsContainer.querySelector('.qty--modern');
    const qtyDisplay = actionsContainer.querySelector('.qty__display');
    qtyDisplay.textContent = '1';
    counter.classList.add('show');
    
    // Show notification
    showCartNotification(productTitle, 1);
    
    // Update header cart count immediately
    return fetch('/cart.js');
  })
  .then(res => res.json())
  .then(cart => {
    updateHeaderCartCount(cart.item_count);
    button.disabled = false;
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Unable to add item to cart. Please try again.');
    button.disabled = false;
  });
}

// Monitor cart changes from other sources (cart page, drawer, etc)
function monitorCartChanges() {
  // Check cart every 2 seconds when page is visible
  let cartCheckInterval;
  
  function startMonitoring() {
    cartCheckInterval = setInterval(() => {
      loadCartState();
    }, 2000);
  }
  
  function stopMonitoring() {
    clearInterval(cartCheckInterval);
  }
  
  // Start/stop based on page visibility
  document.addEventListener('visibilitychange', () => {
    if (document.hidden) {
      stopMonitoring();
    } else {
      loadCartState();
      startMonitoring();
    }
  });
  
  // Listen for theme cart events
  document.addEventListener('cart:updated', () => {
    console.log('Cart updated event detected');
    loadCartState();
  });
  
  // Listen for Shopify theme section rendering
  document.addEventListener('shopify:section:load', () => {
    loadCartState();
  });
  
  // Start monitoring
  startMonitoring();
}

document.addEventListener('DOMContentLoaded', function () {
  // Load wishlist state
  loadWishlist();
  
  // Load cart state
  loadCartState();
  
  // Start monitoring cart changes
  monitorCartChanges();
  
  // Initialize sliders
  {% for block in section.blocks %}
    {% assign col = collections[block.settings.collection] %}
    {% if col != blank and col.products.size > 0 %}
      new Swiper('.swiper-{{ block.id }}', {
        slidesPerView: 1.2,
        spaceBetween: 16,
        grabCursor: true,
        freeMode: true,
        breakpoints: {
          480: { slidesPerView: 1.5 },
          640: { slidesPerView: 2.5 },
          990: { slidesPerView: 4, freeMode: false },
          1200: { slidesPerView: 5, freeMode: false }
        }
      });
    {% endif %}
  {% endfor %}
});

// Reload cart state when returning to page
window.addEventListener('pageshow', function(event) {
  if (event.persisted) {
    // Page was loaded from cache
    loadCartState();
  }
});

// Listen for focus (when user returns to tab)
window.addEventListener('focus', function() {
  loadCartState();
});
</script>

