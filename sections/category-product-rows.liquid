.qty--modern.show{
  display: flex !important;
}
.qty--modern .qty__btn{
  width:32px;
  height:32px;
  border:none;
  border-radius:50%;
  background:#fff;
  color:#1f3d2b;
  font-size:20px;
  cursor:pointer;
  display:flex;
