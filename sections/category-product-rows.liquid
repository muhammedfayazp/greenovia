  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(31, 61, 43, 0.3);
}
.catprodrows__cartbtn:disabled{
  opacity: 0.7;
  cursor: not-allowed;
}
.catprodrows__cartbtn.hide{
  display: none;
}
.catprodrows__cartbtn svg{
  width:20px;
  height:20px;
}
.catprodrows__cartbtn-text{
  font-weight: 600;
}

/* Toast Notification */
.cart-notification{
  position: fixed;
  top: 20px;
  right: 20px;
  background: #1f3d2b;
  color: white;
  padding: 16px 20px;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,.3);
