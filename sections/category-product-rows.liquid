@keyframes slideIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Add to Cart Button */
.catprodrows__cartbtn{
  height:48px;
  padding: 0 24px;
  border-radius:999px;
  border:none;
  background:#1f3d2b;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  cursor:pointer;
  transition: all .3s ease;
  gap: 8px;
  font-size: 15px;
  font-weight: 600;
  white-space: nowrap;
