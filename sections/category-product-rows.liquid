  position: absolute;
  top: 12px;
  right: 12px;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  background: rgba(255,255,255,0.95);
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 10;
  box-shadow: 0 2px 8px rgba(0,0,0,.1);
  transition: all .3s ease;
}
.catprodrows__wishlist:hover{
  transform: scale(1.1);
  background: #fff;
}
.catprodrows__wishlist.active{
  color: #e74c3c;
}
.catprodrows__wishlist.active .heart-outline{
  display: none;
}
.catprodrows__wishlist.active .heart-filled{
  display: block !important;
}
.catprodrows__wishlist svg{
  width: 20px;
  height: 20px;
}

/* Image */
.catprodrows__img{
  display:block;
  aspect-ratio: 1/1;
  background:#eee;
}
.catprodrows__img img{
  width:100%;
  height:100%;
  object-fit:cover;
}

/* Info */
.catprodrows__info{
  padding: 12px;
  flex:1;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.catprodrows__info h3{
  margin:0 0 8px;
  font-size:15px;
  font-weight:600;
  color:#1f3d2b;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 40px;
  text-align: left;
}
.catprodrows__info a{ text-decoration:none; }

/* Bottom Row - Price Left, Actions Right */
.catprodrows__bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12px;
  margin-top: auto;
}

.catprodrows__price{
  font-size:16px;
  color:#1f3d2b;
  font-weight:700;
  text-align: left;
  flex-shrink: 0;
}

/* Actions Container */
.catprodrows__actions{
  display:flex;
  justify-content:flex-end;
  align-items:center;
  gap: 10px;
}

/* Counter - Initially Hidden */
.qty--modern{
  display:none;
  align-items:center;
  background:#f6f7f2;
  border-radius:999px;
  padding:6px 8px;
  gap:8px;
  box-shadow: inset 0 0 0 1px #e3e6de;
  animation: slideIn .3s ease;
