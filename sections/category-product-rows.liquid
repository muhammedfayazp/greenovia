<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
// Wishlist functionality
function toggleWishlist(button) {
  const productId = button.dataset.productId;
  const productHandle = button.dataset.productHandle;
  
  // Get wishlist from localStorage
  let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
  
  // Check if product is already in wishlist
  const index = wishlist.findIndex(item => item.id === productId);
  
  if (index > -1) {
    // Remove from wishlist
    wishlist.splice(index, 1);
    button.classList.remove('active');
  } else {
    // Add to wishlist
    wishlist.push({
      id: productId,
      handle: productHandle,
      addedAt: new Date().toISOString()
    });
    button.classList.add('active');
  }
  
  // Save to localStorage
  localStorage.setItem('wishlist', JSON.stringify(wishlist));
  
  // Show notification
  const notification = document.getElementById('cart-notification');
  const wasActive = index > -1;
  notification.querySelector('.cart-notification__text strong').textContent = 
    wasActive ? 'Removed from wishlist' : 'Added to wishlist!';
  notification.querySelector('.cart-notification__details').textContent = '';
  notification.classList.add('show');
  
  setTimeout(() => {
    notification.classList.remove('show');
    notification.querySelector('.cart-notification__text strong').textContent = 'Added to cart!';
  }, 2000);
}

// Load wishlist on page load
function loadWishlist() {
  const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
  wishlist.forEach(item => {
    const button = document.querySelector(`[data-product-id="${item.id}"]`);
    if (button) {
      button.classList.add('active');
    }
  });
}

// Show toast notification
function showCartNotification(productTitle, quantity) {
  const notification = document.getElementById('cart-notification');
  const details = notification.querySelector('.cart-notification__details');
  details.textContent = `${quantity} × ${productTitle}`;
  
  notification.classList.add('show');
  
  setTimeout(() => {
    notification.classList.remove('show');
  }, 3000);
}

// Update individual product cart button badge
function updateProductCartBadge(variantId, button) {
  fetch('/cart.js')
    .then(res => res.json())
    .then(cart => {
      // Find this variant in cart
      const cartItem = cart.items.find(item => item.variant_id == variantId);
      const badge = button.querySelector('.catprodrows__cartbtn-badge');
      
      if (cartItem && cartItem.quantity > 0) {
        badge.textContent = cartItem.quantity;
        badge.style.display = 'flex';
      } else {
        badge.style.display = 'none';
      }
    });
}

// Update all cart badges on page
function updateAllCartBadges() {
  fetch('/cart.js')
    .then(res => res.json())
    .then(cart => {
      // Update each product card
      document.querySelectorAll('.catprodrows__cartbtn').forEach(button => {
        const variantId = button.dataset.variantId;
        const cartItem = cart.items.find(item => item.variant_id == variantId);
        const badge = button.querySelector('.catprodrows__cartbtn-badge');
        
        if (cartItem && cartItem.quantity > 0) {
          badge.textContent = cartItem.quantity;
          badge.style.display = 'flex';
        } else {
          badge.style.display = 'none';
        }
      });
      
      // Update header cart count
      updateHeaderCartCount(cart.item_count);
    });
}

// Update header cart count
function updateHeaderCartCount(itemCount) {
  // Try multiple common selectors for cart count
  const selectors = [
    '.cart-count',
    '[data-cart-count]',
    '.cart__count',
    '#cart-count',
    '.cart-link__bubble',
    '.header__icon--cart span',
    '.site-header__cart-count',
    '.cart-count-bubble',
    '[data-header-cart-count]',
    '.js-cart-count',
    'cart-count-bubble',
    '.cart-item-count',
    '#CartCount',
    '.header-cart-count'
  ];
  
  let updated = false;
  
  selectors.forEach(selector => {
    const elements = document.querySelectorAll(selector);
    elements.forEach(element => {
      element.textContent = itemCount;
      element.innerText = itemCount;
      
      if (element.hasAttribute('data-cart-count')) {
        element.setAttribute('data-cart-count', itemCount);
      }
      
      // Show/hide based on count
      if (itemCount > 0) {
        element.style.display = '';
        element.style.opacity = '1';
        element.classList.remove('hidden', 'hide');
      } else {
        // Some themes hide when count is 0
        if (element.classList.contains('hide-when-empty')) {
          element.style.display = 'none';
        }
      }
      updated = true;
    });
  });
  
  if (!updated) {
    console.log('Cart count element not found. Item count:', itemCount);
  }
  
  // Trigger theme cart events
  document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', {
    bubbles: true,
    detail: { itemCount: itemCount }
  }));
}

// Ajax Add to Cart Function
function addToCartAjax(button) {
  const variantId = button.dataset.variantId;
  const productTitle = button.dataset.productTitle;
  const qtyInput = button.closest('.catprodrows__actions').querySelector('.qty__input');
  const quantity = parseInt(qtyInput.value) || 1;
  
  // Disable button
  button.disabled = true;
  
  // Toggle icons
  const cartIcon = button.querySelector('.cart-icon');
  const checkIcon = button.querySelector('.check-icon');
  
  // Shopify Ajax API
  fetch('/cart/add.js', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      items: [{
        id: variantId,
        quantity: quantity
      }]
    })
  })
  .then(response => {
    if (!response.ok) {
      throw new Error('Failed to add to cart');
    }
    return response.json();
  })
  .then(data => {
    console.log('Added to cart:', data);
    
    // Show success state
    button.classList.add('added');
    cartIcon.style.display = 'none';
    checkIcon.style.display = 'block';
    
    // Show notification
    showCartNotification(productTitle, quantity);
    
    // Update cart badges
    updateAllCartBadges();
    
    // Reset button
    setTimeout(() => {
      button.classList.remove('added');
      cartIcon.style.display = 'block';
      checkIcon.style.display = 'none';
      button.disabled = false;
      qtyInput.value = 1;
    }, 1500);
    
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Unable to add item to cart. Please try again.');
    button.disabled = false;
  });
}

document.addEventListener('DOMContentLoaded', function () {
  // Load wishlist state
  loadWishlist();
  
  // Load initial cart badges
  updateAllCartBadges();
  
  // Initialize each category slider
  {% for block in section.blocks %}
    {% assign col = collections[block.settings.collection] %}
    {% if col != blank and col.products.size > 0 %}
      new Swiper('.swiper-{{ block.id }}', {
        slidesPerView: 1.2,
        spaceBetween: 16,
        grabCursor: true,
        freeMode: true,
        breakpoints: {
          480: { slidesPerView: 1.5 },
          640: { slidesPerView: 2.5 },
          990: { slidesPerView: 4, freeMode: false },
          1200: { slidesPerView: 5, freeMode: false }
        }
      });
    {% endif %}
  {% endfor %}

  // Counter logic
  document.addEventListener('click', function(e){
    const btn = e.target.closest('.qty__btn');
    if(!btn) return;
    const input = btn.parentElement.querySelector('.qty__input');
    let value = parseInt(input.value) || 1;
    if(btn.dataset.action === 'plus') value++;
    if(btn.dataset.action === 'minus' && value > 1) value--;
    input.value = value;
  });
});
</script>

