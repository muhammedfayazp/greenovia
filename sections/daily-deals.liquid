<section class="dailydeals">
  <div class="dailydeals__container page-width">

    <div class="dailydeals__head">
      <h2 class="dailydeals__title">{{ section.settings.heading }}</h2>

      {% if section.settings.view_more_link != blank %}
        <a href="{{ section.settings.view_more_link }}" class="dailydeals__more">
          {{ section.settings.view_more_text }} â†’
        </a>
      {% endif %}
    </div>

    {% if section.settings.collection != blank %}
      {% assign products = collections[section.settings.collection].products %}
      <div class="dailydeals__list">
        {% for product in products limit: section.settings.products_limit %}
          <a href="{{ product.url }}" class="dailydeals__card">
            <div class="dailydeals__img">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                >
              {% endif %}

              {% if section.settings.show_badge and product.tags.size > 0 %}
                <span class="dailydeals__badge">
                  {{ product.tags.first }}
                </span>
              {% endif %}
            </div>

            <div class="dailydeals__info">
              <h3>{{ product.title }}</h3>
              <span class="dailydeals__price">
                {{ product.price | money }}
              </span>
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <p>Please select a collection for Daily Deals.</p>
    {% endif %}

  </div>
</section>

<style>
.dailydeals{
  background: #f6f7f2;
  padding: 20px 0 50px;
}

.dailydeals__container{
  padding-left: 24px !important;
  padding-right: 24px !important;
}

/* Header */
.dailydeals__head{
  display:flex;
  justify-content: space-between;
  align-items:center;
  margin-bottom: 24px;
}

.dailydeals__title{
  margin:0;
  font-size: 28px;
  color:#1f3d2b;
}

.dailydeals__more{
  font-size:14px;
  color:#1f3d2b;
  text-decoration:none;
  white-space:nowrap;
}
.dailydeals__more:hover{ text-decoration: underline; }

/* Product row */
.dailydeals__list{
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: minmax(200px, 1fr);
  gap: 20px;
  overflow-x: auto;
  padding-bottom: 6px;
  scroll-snap-type: x mandatory;
}
.dailydeals__list::-webkit-scrollbar{
  height: 6px;
}
.dailydeals__list::-webkit-scrollbar-thumb{
  background: rgba(0,0,0,.2);
  border-radius: 10px;
}

/* Card */
.dailydeals__card{
  scroll-snap-align: start;
  background:#fff;
  border-radius:18px;
  overflow:hidden;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  text-decoration:none;
  color: inherit;
  transition: transform .25s ease;
}
.dailydeals__card:hover{
  transform: translateY(-4px);
}

.dailydeals__img{
  position:relative;
  aspect-ratio: 1/1;
  background:#eee;
}
.dailydeals__img img{
  width:100%;
  height:100%;
  object-fit:cover;
  display:block;
}

/* Badge */
.dailydeals__badge{
  position:absolute;
  top:12px;
  left:12px;
  background:#ff9f1c;
  color:#fff;
  font-size:12px;
  padding:4px 8px;
  border-radius:8px;
}

/* Info */
.dailydeals__info{
  padding: 14px;
  text-align:center;
}
.dailydeals__info h3{
  margin:0 0 6px;
  font-size:14px;
  font-weight:600;
}
.dailydeals__price{
  font-size:14px;
  color:#1f3d2b;
  font-weight:500;
}

/* Desktop grid feel */
@media (min-width: 990px){
  .dailydeals__list{
    grid-auto-flow: initial;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    overflow-x: hidden;
  }
}

/* Mobile */
@media (max-width: 768px){
  .dailydeals__container{
    padding-left: 16px !important;
    padding-right: 16px !important;
  }
  .dailydeals__title{
    font-size:24px;
  }
}
</style>

{% schema %}
{
  "name": "Daily Deals",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Daily Deals"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show tag badge",
      "default": true
    },
    {
      "type": "text",
      "id": "view_more_text",
      "label": "View more text",
      "default": "View more"
    },
    {
      "type": "url",
      "id": "view_more_link",
      "label": "View more link"
    }
  ],
  "presets": [
    { "name": "Daily Deals" }
  ]
}
{% endschema %}
