<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="dailydeals">
  <div class="dailydeals__container page-width">

    <div class="dailydeals__head">
      <h2 class="dailydeals__title">{{ section.settings.heading }}</h2>
      {% if section.settings.view_all_link != blank %}
        <a href="{{ section.settings.view_all_link }}" class="dailydeals__more">
          {{ section.settings.view_all_text }} →
        </a>
      {% endif %}
    </div>

    {%- comment -%} Smart Algorithm for Daily Deals {%- endcomment -%}
    {%- assign deal_products = "" | split: "" -%}
    {%- assign featured_products = "" | split: "" -%}
    {%- assign regular_products = "" | split: "" -%}

    {%- comment -%} 1. Collect products on SALE (with compare_at_price) {%- endcomment -%}
    {%- for product in collections.all.products limit: 50 -%}
      {%- if product.compare_at_price > product.price -%}
        {%- assign deal_products = deal_products | push: product -%}
      {%- endif -%}
    {%- endfor -%}

    {%- comment -%} 2. Collect FEATURED or DEAL tagged products {%- endcomment -%}
    {%- for product in collections.all.products limit: 50 -%}
      {%- assign is_featured = false -%}
      {%- for tag in product.tags -%}
        {%- assign tag_lower = tag | downcase -%}
        {%- if tag_lower contains 'featured' or tag_lower contains 'deal' or tag_lower contains 'special' -%}
          {%- assign is_featured = true -%}
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}
      {%- if is_featured -%}
        {%- assign featured_products = featured_products | push: product -%}
      {%- endif -%}
    {%- endfor -%}

    {%- comment -%} 3. Fallback to recent products {%- endcomment -%}
    {%- for product in collections.all.products limit: 30 -%}
      {%- assign regular_products = regular_products | push: product -%}
    {%- endfor -%}

    {%- comment -%} Combine: Sale products first, then featured, then recent {%- endcomment -%}
    {%- assign products = deal_products | concat: featured_products | concat: regular_products -%}
    
    {%- comment -%} Remove duplicates and limit to 20 {%- endcomment -%}
    {%- assign final_products = "" | split: "" -%}
    {%- assign product_ids = "" | split: "" -%}
    {%- for product in products -%}
      {%- unless product_ids contains product.id -%}
        {%- assign final_products = final_products | push: product -%}
        {%- assign product_ids = product_ids | push: product.id -%}
        {%- if final_products.size >= 20 -%}
          {%- break -%}
        {%- endif -%}
      {%- endunless -%}
    {%- endfor -%}

    {%- assign products = final_products -%}

    <div class="dailydeals__swiper swiper">
      <div class="swiper-wrapper">
        {% for product in products %}
          <div class="dailydeals__card swiper-slide">

            <a href="{{ product.url }}" class="dailydeals__img">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                >
              {% endif %}

              {%- comment -%} Sale badge {%- endcomment -%}
              {% if product.compare_at_price > product.price %}
                {% assign discount = product.compare_at_price | minus: product.price %}
                {% assign discount_percentage = discount | times: 100.0 | divided_by: product.compare_at_price | round %}
                <span class="dailydeals__badge">-{{ discount_percentage }}%</span>
              {% endif %}
            </a>

            <div class="dailydeals__info">
              <a href="{{ product.url }}">
                <h3>{{ product.title }}</h3>
              </a>

              <div class="dailydeals__price">
                {%- comment -%} Show compare price if on sale {%- endcomment -%}
                {% if product.compare_at_price > product.price %}
                  <span class="dailydeals__price--compare">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="dailydeals__price--current">{{ product.price | money }}</span>
              </div>

              {%- comment -%} Star Rating {%- endcomment -%}
              <div class="dailydeals__rating">
                <div class="dailydeals__stars">
                  {% for i in (1..5) %}
                    <svg class="dailydeals__star" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% endfor %}
                </div>
                <span class="dailydeals__reviews">228</span>
              </div>

              <form method="post" action="/cart/add" class="dailydeals__form">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

                <div class="dailydeals__actions">
                  <!-- Modern counter -->
                  <div class="qty qty--modern">
                    <button type="button" class="qty__btn" data-action="minus">−</button>
                    <input type="number" name="quantity" value="1" min="1" class="qty__input">
                    <button type="button" class="qty__btn" data-action="plus">+</button>
                  </div>

                  <!-- Cart icon -->
                  <button type="submit" class="dailydeals__cartbtn" aria-label="Add to cart">
                    <svg viewBox="0 0 24 24" fill="none">
                      <path d="M3 3h2l2.2 11.4a2 2 0 0 0 2 1.6h7.5a2 2 0 0 0 2-1.6L21 7H6"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="10" cy="20" r="1.5" fill="currentColor"/>
                      <circle cx="18" cy="20" r="1.5" fill="currentColor"/>
                    </svg>
                  </button>
                </div>
              </form>
            </div>

          </div>
        {% endfor %}
      </div>
    </div>

  </div>
</section>

<style>
.dailydeals{
  background:#f6f7f2;
  padding: 20px 0 60px;
}
.dailydeals__container{
  padding-left: 24px !important;
  padding-right: 24px !important;
}

/* Header */
.dailydeals__head{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom: 26px;
}
.dailydeals__title{
  margin:0;
  font-size: 28px;
  color:#1f3d2b;
}
.dailydeals__more{
  font-size:14px;
  color:#1f3d2b;
  text-decoration:none;
}
.dailydeals__more:hover{ text-decoration: underline; }

/* Swiper */
.dailydeals__swiper{ width:100%; }

/* Card */
.dailydeals__card{
  height:100%;
  display:flex;
  flex-direction:column;
  background:#fff;
  border-radius:18px;
  overflow:hidden;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
}

/* Image ratio */
.dailydeals__img{
  display:block;
  aspect-ratio: 1/1;
  background:#eee;
  position:relative;
}
.dailydeals__img img{
  width:100%;
  height:100%;
  object-fit:cover;
}

/* Sale Badge */
.dailydeals__badge{
  position:absolute;
  top:12px;
  right:12px;
  background:#e63946;
  color:#fff;
  padding:6px 12px;
  border-radius:999px;
  font-size:13px;
  font-weight:700;
  box-shadow: 0 4px 12px rgba(230, 57, 70, 0.3);
  z-index:2;
}

/* Info */
.dailydeals__info{
  padding: 12px;
  text-align:center;
  flex:1;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.dailydeals__info h3{
  margin:0 0 6px;
  font-size:15px;
  font-weight:600;
  color:#1f3d2b;
}
.dailydeals__info a{ text-decoration:none; }

.dailydeals__price{
  font-size:15px;
  margin-bottom: 10px;
  color:#1f3d2b;
  font-weight:500;
  display:flex;
  align-items:center;
  justify-content:center;
  gap:8px;
  flex-wrap:wrap;
}
.dailydeals__price--compare{
  font-size:13px;
  color:#999;
  text-decoration:line-through;
  font-weight:400;
}
.dailydeals__price--current{
  font-size:16px;
  color:#e63946;
  font-weight:700;
}

/* Star Rating */
.dailydeals__rating{
  display:flex;
  align-items:center;
  justify-content:center;
  gap:6px;
  margin-bottom:10px;
}
.dailydeals__stars{
  display:flex;
  gap:2px;
}
.dailydeals__star{
  width:14px;
  height:14px;
  fill:#ffc107;
}
.dailydeals__reviews{
  font-size:13px;
  color:#666;
}

/* Actions */
.dailydeals__actions{
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap: 10px;
}

/* Counter */
.qty--modern{
  display:flex;
  align-items:center;
  background:#f6f7f2;
  border-radius:999px;
  padding:4px;
  gap:4px;
  box-shadow: inset 0 0 0 1px #e3e6de;
}
.qty--modern .qty__btn{
  width:28px;
  height:28px;
  border:none;
  border-radius:50%;
  background:#fff;
  color:#1f3d2b;
  font-size:18px;
  cursor:pointer;
  display:flex;
  align-items:center;
  justify-content:center;
  box-shadow: 0 2px 6px rgba(0,0,0,.08);
}
.qty--modern .qty__input{
  width:36px;
  text-align:center;
  border:none;
  background:transparent;
  font-size:14px;
  font-weight:600;
  color:#1f3d2b;
  outline:none;
}

/* Cart icon */
.dailydeals__cartbtn{
  width:40px;
  height:40px;
  border-radius:50%;
  border:none;
  background:#1f3d2b;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  cursor:pointer;
}
.dailydeals__cartbtn svg{
  width:20px;
  height:20px;
}

/* Mobile compact */
@media (max-width: 768px){
  .dailydeals__container{
    padding-left: 16px !important;
    padding-right: 16px !important;
  }
  .dailydeals__card{
    max-width: 260px;
  }
  .dailydeals__title{ font-size:24px; }
}
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.dailydeals__swiper', {
    slidesPerView: 1.2,
    spaceBetween: 16,
    grabCursor: true,
    freeMode: true,
    breakpoints: {
      480: { slidesPerView: 1.5 },
      640: { slidesPerView: 2.5 },
      990: { slidesPerView: 4, freeMode: false },
      1200: { slidesPerView: 5, freeMode: false }
    }
  });

  // Counter logic
  document.addEventListener('click', function(e){
    const btn = e.target.closest('.qty__btn');
    if(!btn) return;
    const input = btn.parentElement.querySelector('.qty__input');
    let value = parseInt(input.value) || 1;
    if(btn.dataset.action === 'plus') value++;
    if(btn.dataset.action === 'minus' && value > 1) value--;
    input.value = value;
  });
});
</script>

{% schema %}
{
  "name": "Daily Deals",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Daily Deals"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    }
  ],
  "presets": [
    { "name": "Daily Deals" }
  ]
}
{% endschema %}
