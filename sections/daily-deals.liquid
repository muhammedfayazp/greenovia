<section class="dailydeals">
  <div class="dailydeals__container page-width">

    <div class="dailydeals__head">
      <h2 class="dailydeals__title">{{ section.settings.heading }}</h2>

      {% if section.settings.view_all_link != blank %}
        <a href="{{ section.settings.view_all_link }}" class="dailydeals__more">
          {{ section.settings.view_all_text }} â†’
        </a>
      {% endif %}
    </div>

    {% assign products = collections.all.products %}

    <div class="dailydeals__grid">
      {% for product in products %}
        <div class="dailydeals__card">

          <a href="{{ product.url }}" class="dailydeals__img">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title | escape }}"
                loading="lazy"
              >
            {% endif %}
          </a>

          <div class="dailydeals__info">
            <a href="{{ product.url }}">
              <h3>{{ product.title }}</h3>
            </a>

            <div class="dailydeals__price">
              {{ product.price | money }}
            </div>

            <form method="post" action="/cart/add" class="dailydeals__form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="dailydeals__btn">
                Add to cart
              </button>
            </form>
          </div>

        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.dailydeals{
  background:#f6f7f2;
  padding: 20px 0 60px;
}

.dailydeals__container{
  padding-left: 24px !important;
  padding-right: 24px !important;
}

/* Header */
.dailydeals__head{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom: 26px;
}

.dailydeals__title{
  margin:0;
  font-size: 28px;
  color:#1f3d2b;
}

.dailydeals__more{
  font-size:14px;
  color:#1f3d2b;
  text-decoration:none;
  white-space:nowrap;
}
.dailydeals__more:hover{ text-decoration: underline; }

/* Grid */
.dailydeals__grid{
  display:grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 22px;
}

/* Card */
.dailydeals__card{
  background:#fff;
  border-radius:18px;
  overflow:hidden;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  display:flex;
  flex-direction:column;
  transition: transform .25s ease;
}
.dailydeals__card:hover{
  transform: translateY(-6px);
}

/* Image */
.dailydeals__img{
  display:block;
  aspect-ratio: 1/1;
  background:#eee;
}
.dailydeals__img img{
  width:100%;
  height:100%;
  object-fit:cover;
}

/* Info */
.dailydeals__info{
  padding: 14px;
  text-align:center;
}
.dailydeals__info h3{
  margin:0 0 6px;
  font-size:15px;
  font-weight:600;
  color:#1f3d2b;
}
.dailydeals__info a{
  text-decoration:none;
}

.dailydeals__price{
  font-size:15px;
  margin-bottom: 12px;
  color:#1f3d2b;
  font-weight:500;
}

/* Button */
.dailydeals__btn{
  width:100%;
  border:none;
  border-radius: 999px;
  padding: 10px 14px;
  background:#1f3d2b;
  color:#fff;
  font-size:14px;
  cursor:pointer;
  transition: background .25s ease, transform .2s ease;
}
.dailydeals__btn:hover{
  background:#163022;
  transform: translateY(-2px);
}

/* Mobile */
@media (max-width:768px){
  .dailydeals__container{
    padding-left: 16px !important;
    padding-right: 16px !important;
  }
  .dailydeals__title{
    font-size:24px;
  }
}
</style>

{% schema %}
{
  "name": "Daily Deals",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Daily Deals"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    }
  ],
  "presets": [
    { "name": "Daily Deals" }
  ]
}
{% endschema %}
