<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="prodfilter">
  <div class="prodfilter__container page-width">

    {%- comment -%} Header {%- endcomment -%}
    <div class="prodfilter__head">
      <h2 class="prodfilter__title">{{ section.settings.heading }}</h2>
    </div>

    {%- comment -%} Category Filter Tabs {%- endcomment -%}
    <div class="prodfilter__tabs">
      <button class="prodfilter__tab active" data-category="all">All Products</button>
      {% for block in section.blocks %}
        {% assign col = collections[block.settings.collection] %}
        {% if col != blank %}
          <button class="prodfilter__tab" data-category="{{ col.handle }}" {{ block.shopify_attributes }}>
            {{ col.title }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    {%- comment -%} Products Slider {%- endcomment -%}
    <div class="prodfilter__swiper swiper">
      <div class="swiper-wrapper">
        
        {%- comment -%} Collect all products from selected categories {%- endcomment -%}
        {% assign all_products = "" | split: "" %}
        {% for block in section.blocks %}
          {% assign col = collections[block.settings.collection] %}
          {% if col != blank %}
            {% for product in col.products limit: 12 %}
              {% assign all_products = all_products | push: product %}
            {% endfor %}
          {% endif %}
        {% endfor %}

        {%- comment -%} Remove duplicates and display {%- endcomment -%}
        {% assign displayed_ids = "" | split: "" %}
        {% for product in all_products %}
          {% unless displayed_ids contains product.id %}
            {% assign displayed_ids = displayed_ids | push: product.id %}
            
            {%- comment -%} Get product categories {%- endcomment -%}
            {% assign product_categories = "" %}
            {% for block in section.blocks %}
              {% assign col = collections[block.settings.collection] %}
              {% if col != blank %}
                {% for p in col.products %}
                  {% if p.id == product.id %}
                    {% assign product_categories = product_categories | append: col.handle | append: " " %}
                    {% break %}
                  {% endif %}
                {% endfor %}
              {% endif %}
            {% endfor %}

            <div class="prodfilter__card swiper-slide" data-categories="{{ product_categories }}">
              
              <a href="{{ product.url }}" class="prodfilter__img">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                  >
                {% endif %}
              </a>

              <div class="prodfilter__info">
                <a href="{{ product.url }}">
                  <h3>{{ product.title }}</h3>
                </a>

                <div class="prodfilter__price">
                  {{ product.price | money }}
                </div>

                <form method="post" action="/cart/add" class="prodfilter__form">
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

                  <div class="prodfilter__actions">
                    {%- comment -%} Counter {%- endcomment -%}
                    <div class="qty qty--modern">
                      <button type="button" class="qty__btn" data-action="minus">âˆ’</button>
                      <input type="number" name="quantity" value="1" min="1" class="qty__input">
                      <button type="button" class="qty__btn" data-action="plus">+</button>
                    </div>

                    {%- comment -%} Cart Button {%- endcomment -%}
                    <button type="submit" class="prodfilter__cartbtn" aria-label="Add to cart">
                      <svg viewBox="0 0 24 24" fill="none">
                        <path d="M3 3h2l2.2 11.4a2 2 0 0 0 2 1.6h7.5a2 2 0 0 0 2-1.6L21 7H6"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <circle cx="10" cy="20" r="1.5" fill="currentColor"/>
                        <circle cx="18" cy="20" r="1.5" fill="currentColor"/>
                      </svg>
                    </button>
                  </div>
                </form>
              </div>

            </div>
          {% endunless %}
        {% endfor %}

      </div>
    </div>

  </div>
</section>

<style>
.prodfilter{
  background:#f6f7f2;
  padding: 30px 0 60px;
}
.prodfilter__container{
  padding-left: 24px !important;
  padding-right: 24px !important;
}

/* Header */
.prodfilter__head{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom: 26px;
}
.prodfilter__title{
  margin:0;
  font-size: 28px;
  color:#1f3d2b;
}

/* Category Tabs */
.prodfilter__tabs{
  display:flex;
  gap: 10px;
  margin-bottom: 26px;
  overflow-x: auto;
  padding-bottom: 8px;
  scroll-snap-type: x mandatory;
}
.prodfilter__tabs::-webkit-scrollbar{
  height: 4px;
}
.prodfilter__tabs::-webkit-scrollbar-thumb{
  background: rgba(0,0,0,.2);
  border-radius: 10px;
}

.prodfilter__tab{
  padding: 10px 20px;
  border: 2px solid #e3e6de;
  background: #fff;
  color: #1f3d2b;
  border-radius: 999px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  white-space: nowrap;
  transition: all .25s ease;
  scroll-snap-align: start;
}
.prodfilter__tab:hover{
  border-color: #1f3d2b;
  background: #f6f7f2;
}
.prodfilter__tab.active{
  background: #1f3d2b;
  color: #fff;
  border-color: #1f3d2b;
}

/* Swiper */
.prodfilter__swiper{ width:100%; }

/* Product Card */
.prodfilter__card{
  height:100%;
  display:flex;
  flex-direction:column;
  background:#fff;
  border-radius:18px;
  overflow:hidden;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  transition: transform .25s ease, opacity .3s ease;
}
.prodfilter__card:hover{
  transform: translateY(-4px);
}
.prodfilter__card.hidden{
  opacity: 0;
  pointer-events: none;
}

/* Image */
.prodfilter__img{
  display:block;
  aspect-ratio: 1/1;
  background:#eee;
}
.prodfilter__img img{
  width:100%;
  height:100%;
  object-fit:cover;
}

/* Info */
.prodfilter__info{
  padding: 12px;
  text-align:center;
  flex:1;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.prodfilter__info h3{
  margin:0 0 6px;
  font-size:15px;
  font-weight:600;
  color:#1f3d2b;
}
.prodfilter__info a{ text-decoration:none; }

.prodfilter__price{
  font-size:15px;
  margin-bottom: 10px;
  color:#1f3d2b;
  font-weight:500;
}

/* Actions */
.prodfilter__actions{
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap: 10px;
}

/* Counter */
.qty--modern{
  display:flex;
  align-items:center;
  background:#f6f7f2;
  border-radius:999px;
  padding:4px;
  gap:4px;
  box-shadow: inset 0 0 0 1px #e3e6de;
}
.qty--modern .qty__btn{
  width:28px;
  height:28px;
  border:none;
  border-radius:50%;
  background:#fff;
  color:#1f3d2b;
  font-size:18px;
  cursor:pointer;
  display:flex;
  align-items:center;
  justify-content:center;
  box-shadow: 0 2px 6px rgba(0,0,0,.08);
}
.qty--modern .qty__input{
  width:36px;
  text-align:center;
  border:none;
  background:transparent;
  font-size:14px;
  font-weight:600;
  color:#1f3d2b;
  outline:none;
}

/* Cart Button */
.prodfilter__cartbtn{
  width:40px;
  height:40px;
  border-radius:50%;
  border:none;
  background:#1f3d2b;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  cursor:pointer;
  transition: background .2s ease;
}
.prodfilter__cartbtn:hover{
  background:#2d5940;
}
.prodfilter__cartbtn svg{
  width:20px;
  height:20px;
}

/* Mobile */
@media (max-width: 768px){
  .prodfilter__container{
    padding-left: 16px !important;
    padding-right: 16px !important;
  }
  .prodfilter__card{
    max-width: 260px;
  }
  .prodfilter__title{ font-size:24px; }
  .prodfilter__tab{
    font-size: 13px;
    padding: 8px 16px;
  }
}
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
  let swiper;

  // Initialize Swiper
  function initSwiper() {
    if (swiper) swiper.destroy(true, true);
    
    swiper = new Swiper('.prodfilter__swiper', {
      slidesPerView: 1.2,
      spaceBetween: 16,
      grabCursor: true,
      freeMode: true,
      breakpoints: {
        480: { slidesPerView: 1.5 },
        640: { slidesPerView: 2.2 },
        990: { slidesPerView: 4, freeMode: false }
      }
    });
  }

  initSwiper();

  // Category Filter
  const tabs = document.querySelectorAll('.prodfilter__tab');
  const cards = document.querySelectorAll('.prodfilter__card');

  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const category = this.dataset.category;
      
      // Update active tab
      tabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      
      // Filter products
      cards.forEach(card => {
        const categories = card.dataset.categories || '';
        
        if (category === 'all' || categories.includes(category)) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });

      // Reinitialize swiper to recalculate visible slides
      setTimeout(() => {
        if (swiper) swiper.update();
      }, 350);
    });
  });

  // Counter logic
  document.addEventListener('click', function(e){
    const btn = e.target.closest('.qty__btn');
    if(!btn) return;
    const input = btn.parentElement.querySelector('.qty__input');
    let value = parseInt(input.value) || 1;
    if(btn.dataset.action === 'plus') value++;
    if(btn.dataset.action === 'minus' && value > 1) value--;
    input.value = value;
  });
});
</script>

