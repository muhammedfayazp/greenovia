<section class="shopbycat">
  <div class="page-width">
    
    <div class="shopbycat__head">
      <h2 class="shopbycat__title">{{ section.settings.heading }}</h2>

      {% if section.settings.view_more_link != blank %}
        <a href="{{ section.settings.view_more_link }}" class="shopbycat__more">
          {{ section.settings.view_more_text }} â†’
        </a>
      {% endif %}
    </div>

    <div class="shopbycat__grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="shopbycat__item item-{{ forloop.index }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 900 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
            >
          {% endif %}
          <div class="shopbycat__overlay">
            <h3>{{ block.settings.title }}</h3>
            <span>{{ block.settings.subtitle }}</span>
          </div>
        </a>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.shopbycat {
  padding: 60px 0;
  background: #f6f7f2;
}

.shopbycat__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.shopbycat__title {
  font-size: 28px;
  color: #1f3d2b;
  margin: 0;
}

.shopbycat__more {
  font-size: 14px;
  color: #1f3d2b;
  text-decoration: none;
}
.shopbycat__more:hover {
  text-decoration: underline;
}

.shopbycat__grid {
  display: grid;
  grid-template-columns: 1fr 2fr 1fr 1fr;
  grid-template-rows: repeat(2, 220px);
  gap: 20px;
}

.shopbycat__item {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  display: block;
}

.shopbycat__item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .4s ease;
}

.shopbycat__item:hover img {
  transform: scale(1.05);
}

.shopbycat__overlay {
  position: absolute;
  inset: 0;
  padding: 18px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: linear-gradient(to bottom, rgba(0,0,0,.35), rgba(0,0,0,0));
  color: #fff;
}

.shopbycat__overlay h3 {
  margin: 0;
  font-size: 18px;
}
.shopbycat__overlay span {
  font-size: 14px;
  opacity: .9;
}

/* Grid layout mapping */
.item-1 { grid-row: span 2; }
.item-2 { grid-row: span 2; }
.item-5 { grid-column: span 2; }

/* Mobile */
@media (max-width: 768px) {
  .shopbycat__grid {
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto;
  }
  .item-1,
  .item-2,
  .item-5 {
    grid-column: span 2;
    grid-row: span 1;
  }
}
</style>

{% schema %}
{
  "name": "Shop by Category",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "view_more_text",
      "label": "View more text",
      "default": "View more"
    },
    {
      "type": "url",
      "id": "view_more_link",
      "label": "View more link"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Indoor Plants" },
        { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Shop Now" },
        { "type": "url", "id": "link", "label": "Collection link" }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    { "name": "Shop by Category" }
  ]
}
{% endschema %}
