{% assign count = section.blocks.size %}

<section class="shopbycat">
  <div class="page-width">

    <div class="shopbycat__head">
      <h2 class="shopbycat__title">{{ section.settings.heading }}</h2>

      {% if section.settings.view_more_link != blank %}
        <a href="{{ section.settings.view_more_link }}" class="shopbycat__more">
          {{ section.settings.view_more_text }} â†’
        </a>
      {% endif %}
    </div>

    <div class="shopbycat__grid shopbycat__grid--{{ count }}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="shopbycat__item item-{{ forloop.index }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 900 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
            >
          {% endif %}
          <div class="shopbycat__overlay">
            <h3>{{ block.settings.title }}</h3>
            <span>{{ block.settings.subtitle }}</span>
          </div>
        </a>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.shopbycat {
  padding: 50px 0 30px;
  background: #f6f7f2;
}

/* âœ… boxed spacing */
.shopbycat .page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding-left: 24px;
  padding-right: 24px;
}

.shopbycat__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28px;
}

.shopbycat__title {
  font-size: 28px;
  color: #1f3d2b;
  margin: 0;
}

.shopbycat__more {
  font-size: 14px;
  color: #1f3d2b;
  text-decoration: none;
  white-space: nowrap;
}
.shopbycat__more:hover {
  text-decoration: underline;
}

.shopbycat__grid {
  display: grid;
  gap: 20px;
}

/* ðŸ”¹ Auto grid for â‰¤4 categories */
.shopbycat__grid--1,
.shopbycat__grid--2,
.shopbycat__grid--3,
.shopbycat__grid--4 {
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

/* ðŸ”¹ Featured layout for â‰¥5 categories */
.shopbycat__grid--5,
.shopbycat__grid--6,
.shopbycat__grid--7,
.shopbycat__grid--8,
.shopbycat__grid--9,
.shopbycat__grid--10,
.shopbycat__grid--11,
.shopbycat__grid--12 {
  grid-template-columns: 1fr 2fr 1fr 1fr;
  grid-template-rows: repeat(2, 220px);
}

.shopbycat__item {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  display: block;
}

.shopbycat__item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .4s ease;
}

.shopbycat__item:hover img {
  transform: scale(1.05);
}

/* Light overlay label */
.shopbycat__overlay {
  position: absolute;
  top: 14px;
  left: 14px;
  background: rgba(255,255,255,.92);
  border-radius: 12px;
  padding: 10px 14px;
  color: #1f3d2b;
  max-width: 75%;
}

.shopbycat__overlay h3 {
  margin: 0;
  font-size: 16px;
  font-weight: 600;
}
.shopbycat__overlay span {
  font-size: 13px;
  opacity: .8;
}

/* ðŸ”¹ Featured spans only when â‰¥5 */
.shopbycat__grid--5 .item-1,
.shopbycat__grid--6 .item-1,
.shopbycat__grid--7 .item-1,
.shopbycat__grid--8 .item-1,
.shopbycat__grid--9 .item-1,
.shopbycat__grid--10 .item-1,
.shopbycat__grid--11 .item-1,
.shopbycat__grid--12 .item-1 {
  grid-row: span 2;
}

.shopbycat__grid--5 .item-2,
.shopbycat__grid--6 .item-2,
.shopbycat__grid--7 .item-2,
.shopbycat__grid--8 .item-2,
.shopbycat__grid--9 .item-2,
.shopbycat__grid--10 .item-2,
.shopbycat__grid--11 .item-2,
.shopbycat__grid--12 .item-2 {
  grid-row: span 2;
}

.shopbycat__grid--5 .item-5,
.shopbycat__grid--6 .item-5,
.shopbycat__grid--7 .item-5,
.shopbycat__grid--8 .item-5,
.shopbycat__grid--9 .item-5,
.shopbycat__grid--10 .item-5,
.shopbycat__grid--11 .item-5,
.shopbycat__grid--12 .item-5 {
  grid-column: span 2;
}

/* ðŸ“± Mobile */
@media (max-width: 768px) {
  .shopbycat__grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }

  .shopbycat__item {
    grid-column: span 1 !important;
    grid-row: span 1 !important;
  }

  .shopbycat__overlay {
    max-width: 85%;
  }
}
</style>

{% schema %}
{
  "name": "Shop by Category",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "view_more_text",
      "label": "View more text",
      "default": "View more"
    },
    {
      "type": "url",
      "id": "view_more_link",
      "label": "View more link"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Category" },
        { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Shop Now" },
        { "type": "url", "id": "link", "label": "Collection link" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    { "name": "Shop by Category" }
  ]
}
{% endschema %}
