{% assign count = section.blocks.size %}

<section class="shopbycat">
  <div class="page-width">

    <div class="shopbycat__head">
      <h2 class="shopbycat__title">{{ section.settings.heading }}</h2>

      {% if section.settings.view_more_link != blank %}
        <a href="{{ section.settings.view_more_link }}" class="shopbycat__more">
          {{ section.settings.view_more_text }} â†’
        </a>
      {% endif %}
    </div>

    <div class="shopbycat__grid shopbycat__grid--{{ count }}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="shopbycat__item item-{{ forloop.index }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 900 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
            >
          {% endif %}
          <div class="shopbycat__overlay">
            <h3>{{ block.settings.title }}</h3>
            <span>{{ block.settings.subtitle }}</span>
          </div>
        </a>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.shopbycat {
  padding: 50px 0 30px;
  background: #f6f7f2;
}

.shopbycat__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28px;
}

.shopbycat__title {
  font-size: 28px;
  color: #1f3d2b;
  margin: 0;
}

.shopbycat__more {
  font-size: 14px;
  color: #1f3d2b;
  text-decoration: none;
}

.shopbycat__grid {
  display: grid;
  gap: 20px;
}

/* ðŸ”¹ Default grid (auto) */
.shopbycat__grid--1,
.shopbycat__grid--2,
.shopbycat__grid--3,
.shopbycat__grid--4 {
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

/* ðŸ”¹ Featured layout when 5 or more */
.shopbycat__grid--5,
.shopbycat__grid--6,
.shopbycat__grid--7,
.shopbycat__grid--8 {
  grid-template-columns: 1fr 2fr 1fr 1fr;
  grid-template-rows: repeat(2, 220px);
}

.shopbycat__item {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  display: block;
}

.shopbycat__item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Light label */
.shopbycat__overlay {
  position: absolute;
  top: 14px;
  left: 14px;
  background: rgba(255,255,255,.92);
  border-radius: 12px;
  padding: 10px 14px;
  color: #1f3d2b;
}

.shopbycat__overlay h3 {
  margin: 0;
  font-size: 16px;
}
.shopbycat__overlay span {
  font-size: 13px;
  opacity: .8;
}

/* ðŸ”¹ Only apply special spans if featured layout */
.shopbycat__grid--5 .item-1,
.shopbycat__grid--6 .item-1,
.shopbycat__grid--7 .item-1,
.shopbycat__grid--8 .item-1 {
  grid-row: span 2;
}

.shopbycat__grid--5 .item-2,
.shopbycat__grid--6 .item-2,
.shopbycat__grid--7 .item-2,
.shopbycat__grid--8 .item-2 {
  grid-row: span 2;
}

.shopbycat__grid--5 .item-5,
.shopbycat__grid--6 .item-5,
.shopbycat__grid--7 .item-5,
.shopbycat__grid--8 .item-5 {
  grid-column: span 2;
}

/* Mobile */
@media (max-width: 768px) {
  .shopbycat__grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }

  .shopbycat__item {
    grid-column: span 1 !important;
    grid-row: span 1 !important;
  }
}
</style>

{% schema %}
{
  "name": "Shop by Category",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "view_more_text",
      "label": "View more text",
      "default": "View more"
    },
    {
      "type": "url",
      "id": "view_more_link",
      "label": "View more link"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Category" },
        { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Shop Now" },
        { "type": "url", "id": "link", "label": "Collection link" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    { "name": "Shop by Category" }
  ]
}
{% endschema %}
