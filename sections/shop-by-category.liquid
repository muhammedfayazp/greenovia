<section class="shop-by-category">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="section-title">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="category-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="category-card">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
            >
          {% endif %}
          <div class="overlay">
            <h3>{{ block.settings.title }}</h3>
            <span>{{ block.settings.subtitle }}</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.shop-by-category {
  padding: 60px 0;
}
.section-title {
  font-size: 28px;
  margin-bottom: 30px;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-auto-rows: 220px;
  gap: 20px;
}

.category-card {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  display: block;
}

.category-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .4s ease;
}

.category-card:hover img {
  transform: scale(1.05);
}

.category-card .overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,.5), rgba(0,0,0,0));
  color: #fff;
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.category-card h3 {
  font-size: 20px;
  margin: 0;
}
.category-card span {
  font-size: 14px;
  opacity: .9;
}

/* Make first two cards bigger like your design */
.category-card:nth-child(1) {
  grid-row: span 2;
}
.category-card:nth-child(2) {
  grid-column: span 2;
  grid-row: span 2;
}

/* Mobile */
@media (max-width: 768px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    grid-auto-rows: 180px;
  }
  .category-card:nth-child(1),
  .category-card:nth-child(2) {
    grid-column: span 2;
    grid-row: span 1;
  }
}
</style>

{% schema %}
{
  "name": "Shop by Category",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Indoor Plants"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to collection"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Shop by Category"
    }
  ]
}
{% endschema %}
