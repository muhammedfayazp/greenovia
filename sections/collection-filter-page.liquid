{
  "name": "Collection Filter Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_style_filter",
      "label": "Show Style Filter",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "category_filter",
      "name": "Category Filter",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
