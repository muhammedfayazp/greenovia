{% comment %}
  Advanced Product Page - Size & Planter Selection
  Inspired by Acacia Garden Center
{% endcomment %}

<script type="application/ld+json">
  {{ product | structured_data }}
</script>

{% liquid
  assign current_variant = product.selected_or_first_available_variant
  assign product_form_id = 'product-form-' | append: section.id
%}

<div class="product-page" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="product-layout">
      
      {%- comment -%} Product Images Gallery {%- endcomment -%}
      <div class="product-media">
        <div class="product-media__main">
          {% if product.featured_media %}
            <div class="product-media__featured" data-media-id="{{ product.featured_media.id }}">
              <img
                src="{{ product.featured_media | image_url: width: 800 }}"
                alt="{{ product.featured_media.alt | escape }}"
                width="800"
                height="800"
                loading="eager"
                class="product-media__image"
                id="MainProductImage"
              >
            </div>
          {% endif %}
        </div>

        {% if product.media.size > 1 %}
          <div class="product-media__thumbnails">
            {% for media in product.media limit: 6 %}
              <button
                type="button"
                class="product-media__thumbnail {% if forloop.first %}active{% endif %}"
                data-media-id="{{ media.id }}"
                aria-label="Load image {{ forloop.index }}"
              >
                <img
                  src="{{ media | image_url: width: 120 }}"
                  alt="{{ media.alt | escape }}"
                  width="120"
                  height="120"
                  loading="lazy"
                >
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {%- comment -%} Product Information {%- endcomment -%}
      <div class="product-info">
        
        {%- comment -%} Product Title {%- endcomment -%}
        <div class="product-info__header">
          {% if product.vendor != blank %}
            <p class="product-vendor">{{ product.vendor }}</p>
          {% endif %}
          <h1 class="product-title">{{ product.title }}</h1>
        </div>

        {%- comment -%} Price {%- endcomment -%}
        <div class="product-price" id="ProductPrice">
          <span class="price-current">
            {{ current_variant.price | money }}
          </span>
          {% if current_variant.compare_at_price > current_variant.price %}
            <span class="price-compare">
              {{ current_variant.compare_at_price | money }}
            </span>
            <span class="price-badge">
              Save {{ current_variant.compare_at_price | minus: current_variant.price | times: 100 | divided_by: current_variant.compare_at_price }}%
            </span>
          {% endif %}
        </div>

        {%- comment -%} Product Form {%- endcomment -%}
        {% form 'product', product, id: product_form_id, class: 'product-form' %}
          
          {%- comment -%} Size Selection {%- endcomment -%}
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              {% if option.name == 'Size' or option.name == 'size' %}
                <div class="product-option">
                  <label class="product-option__label">
                    Select Size
                    <span class="product-option__selected" id="SelectedSize">
                      - {{ current_variant.options[forloop.index0] }}
                    </span>
                  </label>
                  <div class="size-selector">
                    {% for value in option.values %}
                      {% liquid
                        assign size_available = false
                        for variant in product.variants
                          if variant.options[forloop.parentloop.index0] == value and variant.available
                            assign size_available = true
                            break
                          endif
                        endfor
                      %}
                      <input
                        type="radio"
                        id="Size-{{ forloop.index }}-{{ section.id }}"
                        name="size"
                        value="{{ value | escape }}"
                        {% if current_variant.options[forloop.parentloop.index0] == value %}checked{% endif %}
                        {% unless size_available %}disabled{% endunless %}
                        class="size-selector__input"
                      >
                      <label
                        for="Size-{{ forloop.index }}-{{ section.id }}"
                        class="size-selector__label"
                      >
                        {{ value }}
                      </label>
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          {% endunless %}

          {%- comment -%} Planter Selection {%- endcomment -%}
          <div class="product-option">
            <label class="product-option__label">
              Select Planter
              <span class="product-option__selected" id="SelectedPlanter">- None</span>
            </label>
            <div class="planter-selector">
              
              {%- comment -%} No Planter Option {%- endcomment -%}
              <input
                type="radio"
                id="Planter-None-{{ section.id }}"
                name="planter"
                value="none"
                checked
                class="planter-selector__input"
              >
              <label
                for="Planter-None-{{ section.id }}"
                class="planter-card"
              >
                <div class="planter-card__image planter-card__image--none">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                  </svg>
                </div>
                <div class="planter-card__info">
                  <span class="planter-card__name">No Planter</span>
                  <span class="planter-card__price">Plant Only</span>
                </div>
              </label>

              {%- comment -%} Planter Options {%- endcomment -%}
              {% assign planter_options = section.settings.planter_products | split: ',' %}
              {% for planter_handle in planter_options limit: 4 %}
                {% assign planter = all_products[planter_handle] %}
                {% if planter != blank %}
                  <input
                    type="radio"
                    id="Planter-{{ forloop.index }}-{{ section.id }}"
                    name="planter"
                    value="{{ planter.id }}"
                    class="planter-selector__input"
                    data-planter-price="{{ planter.price }}"
                    data-planter-title="{{ planter.title | escape }}"
                  >
                  <label
                    for="Planter-{{ forloop.index }}-{{ section.id }}"
                    class="planter-card"
                  >
                    <div class="planter-card__image">
                      {% if planter.featured_image %}
                        <img
                          src="{{ planter.featured_image | image_url: width: 120 }}"
                          alt="{{ planter.title | escape }}"
                          width="120"
                          height="120"
                          loading="lazy"
                        >
                      {% endif %}
                    </div>
                    <div class="planter-card__info">
                      <span class="planter-card__name">{{ planter.title }}</span>
                      <span class="planter-card__price">+ {{ planter.price | money }}</span>
                    </div>
                  </label>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          {%- comment -%} Quantity Selector {%- endcomment -%}
          <div class="product-option">
            <label class="product-option__label">Quantity</label>
            <div class="quantity-selector">
              <button
                type="button"
                class="quantity-selector__button"
                data-quantity-change="-1"
                aria-label="Decrease quantity"
              >
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M3 8h10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </button>
              <input
                type="number"
                name="quantity"
                value="1"
                min="1"
                class="quantity-selector__input"
                aria-label="Quantity"
              >
              <button
                type="button"
                class="quantity-selector__button"
                data-quantity-change="1"
                aria-label="Increase quantity"
              >
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M8 3v10M3 8h10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </button>
            </div>
          </div>

          {%- comment -%} Total Price Display {%- endcomment -%}
          <div class="product-total">
            <span class="product-total__label">Total:</span>
            <span class="product-total__price" id="TotalPrice">
              {{ current_variant.price | money }}
            </span>
          </div>

          {%- comment -%} Add to Cart Button {%- endcomment -%}
          <div class="product-actions">
            <button
              type="submit"
              name="add"
              class="btn btn--primary btn--large btn--full product-form__submit"
              {% unless current_variant.available %}disabled{% endunless %}
            >
              <span class="btn__text">
                {% if current_variant.available %}
                  Add to Cart
                {% else %}
                  Sold Out
                {% endif %}
              </span>
            </button>

            <button
              type="button"
              class="btn btn--secondary btn--large btn--full"
              data-buy-now
            >
              Buy It Now
            </button>
          </div>

          {%- comment -%} Product Meta {%- endcomment -%}
          <div class="product-meta">
            {% if product.metafields.custom.care_level %}
              <div class="product-meta__item">
                <span class="product-meta__icon">üå±</span>
                <span class="product-meta__label">Care Level:</span>
                <span class="product-meta__value">{{ product.metafields.custom.care_level }}</span>
              </div>
            {% endif %}

            {% if product.metafields.custom.light_needs %}
              <div class="product-meta__item">
                <span class="product-meta__icon">‚òÄÔ∏è</span>
                <span class="product-meta__label">Light:</span>
                <span class="product-meta__value">{{ product.metafields.custom.light_needs }}</span>
              </div>
            {% endif %}

            {% if product.metafields.custom.water_frequency %}
              <div class="product-meta__item">
                <span class="product-meta__icon">üíß</span>
                <span class="product-meta__label">Water:</span>
                <span class="product-meta__value">{{ product.metafields.custom.water_frequency }}</span>
              </div>
            {% endif %}

            {% if product.metafields.custom.pet_safe %}
              <div class="product-meta__item">
                <span class="product-meta__icon">üêæ</span>
                <span class="product-meta__label">Pet Safe:</span>
                <span class="product-meta__value">{{ product.metafields.custom.pet_safe }}</span>
              </div>
            {% endif %}
          </div>

          <select name="id" class="product-variant-select" style="display: none;">
            {% for variant in product.variants %}
              <option
                value="{{ variant.id }}"
                {% if variant == current_variant %}selected{% endif %}
                {% unless variant.available %}disabled{% endunless %}
              >
                {{ variant.title }} - {{ variant.price | money }}
              </option>
            {% endfor %}
          </select>
        {% endform %}

        {%- comment -%} Product Description {%- endcomment -%}
        {% if product.description != blank %}
          <div class="product-description">
            <h3 class="product-description__title">About This Plant</h3>
            <div class="product-description__content">
              {{ product.description }}
            </div>
          </div>
        {% endif %}

        {%- comment -%} Trust Badges {%- endcomment -%}
        <div class="product-trust">
          <div class="product-trust__item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>30-Day Guarantee</span>
          </div>
          <div class="product-trust__item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="1" y="3" width="15" height="13"/>
              <path d="M16 8V2l6 2v11l-6 2V10z"/>
            </svg>
            <span>Expert Care Advice</span>
          </div>
          <div class="product-trust__item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
              <line x1="12" y1="22.08" x2="12" y2="12"/>
            </svg>
            <span>Free Shipping Over AED 150</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  /* Media Gallery */
  .product-media__main {
    position: sticky;
    top: 100px;
  }

  .product-media__featured {
    aspect-ratio: 1;
    background: #F8F9F5;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .product-media__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-media__thumbnails {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 0.75rem;
  }

  .product-media__thumbnail {
    aspect-ratio: 1;
    border: 2px solid transparent;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s;
    background: #F8F9F5;
  }

  .product-media__thumbnail.active,
  .product-media__thumbnail:hover {
    border-color: #2D5016;
  }

  .product-media__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Product Info */
  .product-vendor {
    font-size: 0.875rem;
    color: #6B7C6A;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #2D5016;
  }

  .product-price {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #E5E8DD;
  }

  .price-current {
    font-size: 2rem;
    font-weight: 700;
    color: #2D5016;
  }

  .price-compare {
    font-size: 1.25rem;
    color: #9BA89A;
    text-decoration: line-through;
  }

  .price-badge {
    background: #C85A4B;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  /* Product Options */
  .product-option {
    margin-bottom: 2rem;
  }

  .product-option__label {
    display: block;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2B3E2C;
  }

  .product-option__selected {
    color: #5A7C3E;
    font-weight: 600;
  }

  /* Size Selector */
  .size-selector {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .size-selector__input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .size-selector__label {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    padding: 0.875rem 1.5rem;
    border: 2px solid #E5E8DD;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    background: white;
  }

  .size-selector__input:checked + .size-selector__label {
    border-color: #2D5016;
    background: #F8F9F5;
    color: #2D5016;
  }

  .size-selector__input:disabled + .size-selector__label {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .size-selector__label:hover:not(:has(input:disabled)) {
    border-color: #5A7C3E;
  }

  /* Planter Selector */
  .planter-selector {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 1rem;
  }

  .planter-selector__input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .planter-card {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border: 2px solid #E5E8DD;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s;
    background: white;
    text-align: center;
  }

  .planter-selector__input:checked + .planter-card {
    border-color: #2D5016;
    background: #F8F9F5;
  }

  .planter-card:hover {
    border-color: #5A7C3E;
  }

  .planter-card__image {
    width: 80px;
    height: 80px;
    margin: 0 auto 0.75rem;
    border-radius: 8px;
    overflow: hidden;
    background: #F8F9F5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .planter-card__image--none {
    color: #9BA89A;
  }

  .planter-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .planter-card__info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .planter-card__name {
    font-size: 0.875rem;
    font-weight: 600;
    color: #2B3E2C;
  }

  .planter-card__price {
    font-size: 0.8125rem;
    color: #6B7C6A;
    font-weight: 600;
  }

  /* Quantity Selector */
  .quantity-selector {
    display: inline-flex;
    align-items: center;
    border: 2px solid #E5E8DD;
    border-radius: 8px;
    overflow: hidden;
  }

  .quantity-selector__button {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
    color: #2B3E2C;
  }

  .quantity-selector__button:hover {
    background: #F8F9F5;
  }

  .quantity-selector__input {
    width: 60px;
    height: 44px;
    border: none;
    border-left: 1px solid #E5E8DD;
    border-right: 1px solid #E5E8DD;
    text-align: center;
    font-weight: 600;
    font-size: 1rem;
  }

  /* Total Price */
  .product-total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: #F8F9F5;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .product-total__label {
    font-size: 1.125rem;
    font-weight: 600;
    color: #2B3E2C;
  }

  .product-total__price {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2D5016;
  }

  /* Product Actions */
  .product-actions {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  /* Product Meta */
  .product-meta {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #F8F9F5;
    border-radius: 12px;
  }

  .product-meta__item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }

  .product-meta__icon {
    font-size: 1.25rem;
  }

  .product-meta__label {
    color: #6B7C6A;
  }

  .product-meta__value {
    font-weight: 600;
    color: #2B3E2C;
  }

  /* Product Description */
  .product-description {
    margin-bottom: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #E5E8DD;
  }

  .product-description__title {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: #2D5016;
  }

  .product-description__content {
    color: #6B7C6A;
    line-height: 1.7;
  }

  /* Trust Badges */
  .product-trust {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
    background: white;
    border: 1px solid #E5E8DD;
    border-radius: 12px;
  }

  .product-trust__item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: #2B3E2C;
  }

  .product-trust__item svg {
    flex-shrink: 0;
    color: #5A7C3E;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-media__main {
      position: static;
    }
  }

  @media (max-width: 640px) {
    .planter-selector {
      grid-template-columns: repeat(2, 1fr);
    }

    .product-meta {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  (function() {
    // Image Gallery
    const thumbnails = document.querySelectorAll('.product-media__thumbnail');
    const mainImage = document.getElementById('MainProductImage');

    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function() {
        thumbnails.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        const img = this.querySelector('img');
        if (img && mainImage) {
          mainImage.src = img.src.replace('width=120', 'width=800');
        }
      });
    });

    // Size Selection
    const sizeInputs = document.querySelectorAll('input[name="size"]');
    const selectedSizeSpan = document.getElementById('SelectedSize');
    const variantSelect = document.querySelector('.product-variant-select');

    sizeInputs.forEach(input => {
      input.addEventListener('change', function() {
        if (selectedSizeSpan) {
          selectedSizeSpan.textContent = '- ' + this.value;
        }
        updateVariant();
      });
    });

    // Planter Selection
    const planterInputs = document.querySelectorAll('input[name="planter"]');
    const selectedPlanterSpan = document.getElementById('SelectedPlanter');
    
    planterInputs.forEach(input => {
      input.addEventListener('change', function() {
        const planterTitle = this.dataset.planterTitle || 'None';
        if (selectedPlanterSpan) {
          selectedPlanterSpan.textContent = '- ' + planterTitle;
        }
        updateTotalPrice();
      });
    });

    // Quantity Controls
    const quantityInput = document.querySelector('input[name="quantity"]');
    const quantityButtons = document.querySelectorAll('[data-quantity-change]');

    quantityButtons.forEach(button => {
      button.addEventListener('click', function() {
        const change = parseInt(this.dataset.quantityChange);
        const currentValue = parseInt(quantityInput.value);
        const newValue = Math.max(1, currentValue + change);
        quantityInput.value = newValue;
        updateTotalPrice();
      });
    });

    if (quantityInput) {
      quantityInput.addEventListener('change', function() {
        if (this.value < 1) this.value = 1;
        updateTotalPrice();
      });
    }

    // Update Variant
    function updateVariant() {
      const selectedSize = document.querySelector('input[name="size"]:checked');
      if (!selectedSize || !variantSelect) return;

      // Find matching variant
      for (let option of variantSelect.options) {
        if (option.text.includes(selectedSize.value)) {
          variantSelect.value = option.value;
          updatePrice(option.text);
          break;
        }
      }
      updateTotalPrice();
    }

    // Update Price
    function updatePrice(variantText) {
      const priceMatch = variantText.match(/AED\s*[\d,.]+/);
      if (priceMatch) {
        const priceEl = document.getElementById('ProductPrice');
        if (priceEl) {
          priceEl.querySelector('.price-current').textContent = priceMatch[0];
        }
      }
    }

    // Update Total Price
    function updateTotalPrice() {
      const basePrice = parseFloat(
        document.querySelector('.price-current').textContent.replace(/[^\d.]/g, '')
      );
      
      const selectedPlanter = document.querySelector('input[name="planter"]:checked');
      const planterPrice = selectedPlanter && selectedPlanter.dataset.planterPrice
        ? parseFloat(selectedPlanter.dataset.planterPrice) / 100
        : 0;
      
      const quantity = parseInt(quantityInput.value) || 1;
      
      const total = (basePrice + planterPrice) * quantity;
      
      const totalPriceEl = document.getElementById('TotalPrice');
      if (totalPriceEl) {
        totalPriceEl.textContent = 'AED ' + total.toFixed(2);
      }
    }

    // Initialize
    updateTotalPrice();
  })();
