<section class="category-grid section-padding">
  <div class="container text-center">
    <h2 class="h2">{{ section.settings.title | default: 'Shop by Category' }}</h2>
    
    <div class="grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.collection.url }}" class="category-card hover-lift">
          <div class="category-card__image">
            {%- if block.settings.collection.image != blank -%}
              {{ block.settings.collection.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
            {%- else -%}
              <div class="placeholder-svg">{{ 'collection-1' | placeholder_svg_tag }}</div>
            {%- endif -%}
          </div>
          <div class="category-card__content">
            <h3 class="h3">{{ block.settings.collection.title | default: 'Collection Name' }}</h3>
            <span class="category-card__link">View Products â†’</span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
.text-center { text-align: center; }

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.category-card {
  position: relative;
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: var(--shadow-md);
  color: var(--color-text);
  display: block;
}

.category-card__image {
  height: 350px;
}

.category-card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-card__content {
  padding: 1.5rem;
}

.category-card__link {
  color: var(--color-primary);
  font-weight: 500;
  font-size: 0.9rem;
}

.placeholder-svg {
  background: #f1f5f9;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
</style>

{% schema %}
{
  "name": "Category Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "limit": 6,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Grid",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
