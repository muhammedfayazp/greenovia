{% schema %}
{
  "name": "Hero Plant Slider",
  "class": "section-hero-plant-slider",
  "settings": [
    {
      "type": "color",
      "id": "bg_color_right",
      "label": "Right Side Background Color",
      "default": "#E8F0E8"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "div", "label": "Div" }
      ],
      "default": "h1",
      "info": "Use H1 for the main hero section for better SEO."
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shop Beautiful Plants for Every Home"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Premium plants, easy care, and fast delivery - everything you need to grow with confidence."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "View all items"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Plant Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="hero-slider-wrapper" data-section-id="{{ section.id }}">
  <!-- Setup Swiper -->
  <div class="swiper hero-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="hero-slide-grid">
              <!-- Left Content (Text) -->
              <div class="hero-content">
                <div class="hero-content-inner">
                  {% if section.settings.heading_tag == 'h1' %}
                    <h1 class="hero-title">{{ block.settings.heading }}</h1>
                  {% elsif section.settings.heading_tag == 'h2' %}
                    <h2 class="hero-title">{{ block.settings.heading }}</h2>
                  {% else %}
                    <div class="hero-title h2">{{ block.settings.heading }}</div>
                  {% endif %}
                  
                  <p class="hero-description">{{ block.settings.text }}</p>
                  
                  {% if block.settings.button_text != blank %}
                    <a href="{{ block.settings.button_link }}" class="hero-btn">
                      {{ block.settings.button_text }} &rarr;
                    </a>
                  {% endif %}
                </div>
              </div>
              
              <!-- Right Content (Image) -->
              <div class="hero-image-container" style="background-color: {{ section.settings.bg_color_right }};">
                {% if block.settings.image %}
                  {% liquid
                    assign loading_strategy = 'lazy'
                    if forloop.first
                      assign loading_strategy = 'eager'
                    endif
                  %}
                  <img 
                    src="{{ block.settings.image | image_url: width: 1200 }}" 
                    alt="{{ block.settings.heading | escape }}" 
                    class="hero-plant-img" 
                    loading="{{ loading_strategy }}"
                    width="1000"
                    height="1000"
                  >
                {% else %}
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-plant-img placeholder' }}
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Pagination -->
    <div class="swiper-pagination"></div>
  </div>
</div>

<style>
  /* Section Layout */
  .hero-slider-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 40px;
    background: #fff;
    overflow: hidden;
  }

  .hero-slide-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 600px;
    align-items: center;
  }

  /* Left Content */
  .hero-content {
    padding: 60px 80px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
    background: #fff;
  }

  .hero-content-inner {
    max-width: 500px;
  }

  .hero-title {
    font-size: 3.5rem;
    color: #1a3c1a; 
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-family: var(--font-heading-family); 
    font-weight: 700;
  }

  .hero-description {
    font-size: 1.125rem;
    color: #555;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    max-width: 440px;
  }

  .hero-btn {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    background: #2b4e2b;
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    width: fit-content;
    font-size: 1.05rem;
  }

  .hero-btn:hover {
    background: #1a3c1a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(43, 78, 43, 0.2);
  }

  /* Right Image */
  .hero-image-container {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .hero-plant-img {
    max-width: 85%;
    max-height: 85%;
    object-fit: contain;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.12));
    transition: transform 0.5s ease;
  }

  .swiper-slide-active .hero-plant-img {
    transform: scale(1.02);
  }
  
  .placeholder {
    width: 100%;
    height: 100%;
    opacity: 0.5;
  }
  
  /* Swiper Pagination */
  .swiper-pagination {
    position: absolute;
    right: 30px !important;
    top: 50% !important;
    transform: translateY(-50%);
    left: auto !important;
    bottom: auto !important;
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 20;
  }
  
  .swiper-pagination-bullet {
    width: 12px;
    height: 12px;
    background: #d1d1d1;
    opacity: 0.6;
    margin: 0 !important;
    transition: all 0.3s;
  }
  
  .swiper-pagination-bullet-active {
    background: #2b4e2b;
    opacity: 1;
    transform: scale(1.2);
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .hero-title { font-size: 3rem; }
    .hero-content { padding: 40px; }
  }

  @media (max-width: 900px) {
    .hero-title { font-size: 2.5rem; }
  }

  @media (max-width: 768px) {
    .hero-slide-grid {
      grid-template-columns: 1fr;
      min-height: auto;
      display: flex;
      flex-direction: column;
    }
    
    /* Image First on Mobile */
    .hero-image-container {
      order: 1;
      height: 350px;
      padding: 20px;
      background-color: {{ section.settings.bg_color_right }};
    }
    
    .hero-content {
      order: 2;
      padding: 40px 24px;
      text-align: center;
    }
    
    .hero-content-inner {
      margin: 0 auto;
      align-items: center;
      display: flex;
      flex-direction: column;
    }

    .hero-title {
      font-size: 2.25rem;
      margin-bottom: 1rem;
    }
    
    .swiper-pagination {
      display: none;
    }
  }
</style>

<!-- Standard Swiper CSS/JS loading if not present -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.hero-swiper', {
      loop: true,
      effect: 'fade',
      fadeEffect: {
        crossFade: true
      },
      autoplay: {
        delay: 6000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      }
    });
  });
</script>
