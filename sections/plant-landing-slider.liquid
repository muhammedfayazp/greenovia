<script>
(function() {
  'use strict';
  
  document.addEventListener('DOMContentLoaded', function() {
    const heroSection = document.getElementById('plantHero');
    if (!heroSection) return;

    // Get all slides and dots in both desktop and mobile versions
    const allSlides = heroSection.querySelectorAll('.plant-slide');
    const allDots = heroSection.querySelectorAll('.plant-dot');
    
    if (allSlides.length === 0) return;

    let currentSlide = 0;
    let autoplayInterval;

    // Function to show specific slide
    function showSlide(index) {
      // Ensure index is within bounds
      if (index < 0) index = allSlides.length - 1;
      if (index >= allSlides.length) index = 0;

      currentSlide = index;

      // Update all slides (both desktop and mobile)
      allSlides.forEach((slide, i) => {
        if (parseInt(slide.dataset.slide) === currentSlide) {
          slide.classList.add('active');
        } else {
          slide.classList.remove('active');
        }
      });

      // Update all dots (both desktop and mobile)
      allDots.forEach((dot, i) => {
        if (parseInt(dot.dataset.index) === currentSlide) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    // Next slide
    function nextSlide() {
      showSlide(currentSlide + 1);
    }

    // Start autoplay
    function startAutoplay() {
      if (allSlides.length <= 1) return;
      autoplayInterval = setInterval(nextSlide, 4000);
    }

    // Stop autoplay
    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }

    // Dot click handlers
    allDots.forEach(dot => {
      dot.addEventListener('click', function() {
        const index = parseInt(this.dataset.index);
        showSlide(index);
        stopAutoplay();
        startAutoplay(); // Restart autoplay after manual interaction
      });
    });

    // Touch/swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;

    heroSection.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    heroSection.addEventListener('touchend', function(e) {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });

    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          // Swipe left - next slide
          nextSlide();
        } else {
          // Swipe right - previous slide
          showSlide(currentSlide - 1);
        }
        stopAutoplay();
        startAutoplay();
      }
    }

    // Pause autoplay on hover (desktop only)
    if (window.matchMedia('(min-width: 769px)').matches) {
      heroSection.addEventListener('mouseenter', stopAutoplay);
      heroSection.addEventListener('mouseleave', startAutoplay);
    }

    // Initialize
    showSlide(0);
    startAutoplay();

    // Pause when tab is not visible
    document.addEventListener('visibilitychange', function() {
      if (document.hidden) {
        stopAutoplay();
      } else {
        startAutoplay();
      }
    });
  });
})();
</script>
