{% schema %}
{
  "name": "Plant Landing Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Grow Beautiful Plants at Home"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Shop our organic, hand-picked selection of plants & accessories.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Plant Landing Slider",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<style>
.plant-slider {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  align-items: center;
  padding: 4rem 1rem;
}

.plant-slider__content {
  max-width: 480px;
}

.plant-slider__heading {
  font-size: 3rem;
  font-weight: 700;
  color: #1c3a13;
}

.plant-slider__subtext p {
  font-size: 1.125rem;
  color: #4a4a4a;
}

.plant-slider__btn {
  margin-top: 1.6rem;
  background: #4caf50;
  color: #fff;
  padding: 0.8rem 1.8rem;
  font-weight: 600;
  border-radius: 0.4rem;
  text-transform: uppercase;
}

.plant-slider .slideshow-controls__item {
  margin: 0.4rem 0;
  border-radius: 50%;
  width: 12px;
  height: 12px;
  background: #ccc;
  transition: all .3s ease;
}
.slideshow-controls__item[data-active] {
  background: #4caf50;
  width: 14px;
  height: 14px;
}
</style>

<slideshow-component class="plant-slider"
  data-initial-slide="0"
  {% if section.blocks.size > 1 %}
    slideshow-autoplay
  {% endif %}
>
  <div slot="slides">
    {% for block in section.blocks %}
      <slideshow-slide slide-id="{{ block.id }}">
        <div class="plant-slider__slide grid grid-cols-2 gap-8 items-center">
          <div class="plant-slider__content">
            <h1 class="plant-slider__heading">{{ section.settings.heading }}</h1>
            <div class="plant-slider__subtext">{{ section.settings.subtext }}</div>
            <a href="{{ section.settings.button_link }}" class="plant-slider__btn">{{ section.settings.button_text }}</a>
          </div>
          {% if block.settings.slide_image %}
            <div class="plant-slider__image">
              <img src="{{ block.settings.slide_image | img_url: '1200x' }}" alt="Slide image">
            </div>
          {% endif %}
        </div>
      </slideshow-slide>
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 %}
    {% render 'slideshow-controls',
      style: 'dots',
      item_count: section.blocks.size,
      show_arrows: false,
      pagination_position: 'vertical'
    %}
  {% endif %}
</slideshow-component>
