{% schema %}
{
  "name": "Plant Landing Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Beautiful Plants for Every Home"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Premium plants, easy care, and fast delivery ‚Äî everything you need to grow with confidence."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View all items"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide image"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Plant Landing Slider"
  }]
}
{% endschema %}

{% assign slide_blocks = section.blocks | where: "type", "slide" %}

<style>
/* ===== CSS VARIABLES ===== */
:root {
  --hero-green: #1f3d1b;
  --hero-light-green: #f4faf4;
  --hero-text-gray: #555;
  --hero-dot-inactive: #cfd8cf;
  --hero-border-radius: 10px;
}

/* ===== RESET & BASE ===== */
.plant-hero * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.plant-hero {
  width: 100%;
  overflow: hidden;
}

/* ===== DESKTOP LAYOUT ===== */
.hero-desktop {
  display: flex;
  min-height: 80vh;
  padding: 60px;
  gap: 60px;
  background: #fff;
  align-items: center;
  max-width: 1400px;
  margin: 0 auto;
}

.hero-left {
  flex: 1;
  max-width: 550px;
}

.hero-left h1 {
  font-size: 56px;
  line-height: 1.2;
  color: var(--hero-green);
  margin-bottom: 20px;
  font-weight: 700;
}

.hero-left p {
  font-size: 18px;
  line-height: 1.6;
  color: var(--hero-text-gray);
  margin-bottom: 30px;
}

.hero-btn {
  display: inline-block;
  background: var(--hero-green);
  color: #fff;
  padding: 16px 40px;
  border-radius: var(--hero-border-radius);
  text-decoration: none;
  font-size: 16px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.hero-btn:hover {
  background: #2d5a27;
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(31, 61, 27, 0.2);
}

/* Desktop Features */
.hero-desktop-features {
  display: flex;
  gap: 40px;
  margin-top: 50px;
}

.desktop-feature-item {
  flex: 1;
}

.desktop-feature-item span {
  font-size: 28px;
  display: block;
  margin-bottom: 12px;
}

.desktop-feature-item strong {
  display: block;
  font-size: 16px;
  color: var(--hero-green);
  margin-bottom: 6px;
  font-weight: 600;
}

.desktop-feature-item p {
  font-size: 14px;
  color: var(--hero-text-gray);
  margin: 0;
}

/* Desktop Slider Right Side */
.hero-right {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plant-slider-container {
  position: relative;
  width: 100%;
  max-width: 500px;
  height: 500px;
}

.plant-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.6s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plant-slide.active {
  opacity: 1;
  z-index: 1;
}

.plant-slide img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  display: block;
}

/* Desktop Dots */
.plant-dots {
  position: absolute;
  right: -40px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 12px;
  z-index: 2;
}

.plant-dot {
  width: 12px;
  height: 12px;
  background: var(--hero-dot-inactive);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.plant-dot:hover {
  background: #a0b5a0;
  transform: scale(1.2);
}

.plant-dot.active {
  background: var(--hero-green);
  height: 36px;
  border-radius: 6px;
}

/* ===== MOBILE LAYOUT ===== */
.hero-mobile {
  display: none;
}

/* ===== RESPONSIVE BREAKPOINTS ===== */
@media (max-width: 1024px) {
  .hero-desktop {
    padding: 40px;
    gap: 40px;
  }

  .hero-left h1 {
    font-size: 44px;
  }

  .plant-slider-container {
    max-width: 400px;
    height: 400px;
  }

  .plant-dots {
    right: -30px;
  }
}

/* ===== MOBILE STYLES ===== */
@media (max-width: 768px) {
  /* Hide desktop */
  .hero-desktop {
    display: none !important;
  }

  /* Show mobile */
  .hero-mobile {
    display: block !important;
    width: 100%;
    background: #ffffff;
    padding: 20px 16px;
  }

  /* Mobile Card Container */
  .hero-mobile-card {
    background: var(--hero-light-green);
    border-radius: 32px;
    padding: 28px 24px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
  }

  /* Mobile Top Section */
  .hero-mobile-top {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
  }

  .hero-mobile-text {
    flex: 1;
  }

  .hero-mobile-text h1 {
    font-size: 28px;
    line-height: 1.25;
    color: var(--hero-green);
    margin-bottom: 12px;
    font-weight: 700;
  }

  .hero-mobile-text p {
    font-size: 14px;
    line-height: 1.6;
    color: var(--hero-text-gray);
    margin-bottom: 16px;
  }

  .hero-btn.full {
    width: 100%;
    padding: 14px 0;
    text-align: center;
    display: block;
    border-radius: 12px;
  }

  /* Mobile Image Slider */
  .hero-mobile-image {
    flex-shrink: 0;
    width: 140px;
    height: 140px;
    position: relative;
  }

  .hero-mobile-image .plant-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .hero-mobile-image .plant-slide.active {
    opacity: 1;
    z-index: 1;
  }

  .hero-mobile-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* Mobile Dots */
  .hero-mobile .plant-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin: 16px 0 24px;
    position: static;
    transform: none;
    flex-direction: row;
  }

  .hero-mobile .plant-dot {
    width: 8px;
    height: 8px;
  }

  .hero-mobile .plant-dot.active {
    width: 24px;
    height: 8px;
    border-radius: 4px;
  }

  /* Mobile Features */
  .hero-mobile-features {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 14px;
  }

  .feature-item span {
    font-size: 26px;
    flex-shrink: 0;
  }

  .feature-item strong {
    display: block;
    font-size: 15px;
    color: var(--hero-green);
    margin-bottom: 4px;
    font-weight: 600;
  }

  .feature-item p {
    font-size: 13px;
    color: var(--hero-text-gray);
    margin: 0;
    line-height: 1.4;
  }
}

@media (max-width: 480px) {
  .hero-mobile-text h1 {
    font-size: 24px;
  }

  .hero-mobile-image {
    width: 120px;
    height: 120px;
  }

  .hero-mobile-card {
    padding: 24px 20px;
    border-radius: 28px;
  }
}
</style>

