{% schema %}
{
  "name": "Plant Hero Slider",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Shop Beautiful Plants for Every Home" },
    { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Premium plants, easy care, and fast delivery ‚Äî everything you need to grow with confidence." },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "View all items" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Slide image" }
      ]
    }
  ],
  "presets": [{ "name": "Plant Hero Slider" }]
}
{% endschema %}

{% assign slides = section.blocks | where: "type", "slide" %}

<section class="plant-hero" id="plantHero-{{ section.id }}">
  <div class="hero-wrapper">

    <!-- ===== TEXT ===== -->
    <div class="hero-text">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subtext }}</p>
      <a href="{{ section.settings.button_link }}" class="hero-btn">
        {{ section.settings.button_text }}
      </a>

      <div class="hero-features">
        <div><span>üöö</span> Fast Delivery</div>
        <div><span>üå±</span> Healthy Plants</div>
        <div><span>‚≠ê</span> Premium Quality</div>
      </div>
    </div>

    <!-- ===== SLIDER ===== -->
    <div class="hero-slider">
      <div class="slides">
        {% for block in slides %}
          <div class="slide {% if forloop.first %}active{% endif %}">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 600 }}" alt="">
            {% endif %}
          </div>
        {% endfor %}
      </div>

      {% if slides.size > 1 %}
      <div class="dots">
        {% for block in slides %}
          <span class="dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
        {% endfor %}
      </div>
      {% endif %}
    </div>

  </div>
</section>

<style>
.plant-hero {
  background: #fff;
  padding: 60px 20px;
}
.hero-wrapper {
  max-width: 1200px;
  margin: auto;
  display: flex;
  align-items: center;
  gap: 40px;
}

/* TEXT */
.hero-text { max-width: 520px; }
.hero-text h1 {
  font-size: 56px;
  line-height: 1.1;
  color: #1f3d1b;
}
.hero-text p {
  font-size: 18px;
  color: #555;
  margin: 16px 0 24px;
}
.hero-btn {
  display: inline-block;
  background: #1f3d1b;
  color: #fff;
  padding: 14px 34px;
  border-radius: 12px;
}
.hero-features {
  display: flex;
  gap: 20px;
  margin-top: 30px;
  font-size: 14px;
  color: #333;
}

/* SLIDER */
.hero-slider {
  flex: 1;
  position: relative;
  background: #f2f7f2;
  border-radius: 32px;
  padding: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.slides { position: relative; width: 100%; text-align: center; }
.slide { display: none; }
.slide.active { display: block; }
.slide img {
  max-width: 360px;
  width: 100%;
  margin: auto;
}

/* DOTS */
.dots {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 8px;
}
.dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: #cfd8cf;
  cursor: pointer;
}
.dot.active { background: #1f3d1b; }

/* ===== MOBILE CARD ===== */
@media (max-width: 768px) {
  .hero-wrapper {
    flex-direction: column;
    background: #f4faf4;
    border-radius: 36px;
    padding: 24px 20px;
    box-shadow: 0 16px 40px rgba(0,0,0,.08);
  }

  .hero-text h1 { font-size: 26px; }
  .hero-text p { font-size: 14px; }
  .hero-btn { width: 100%; text-align: center; }

  .hero-features {
    flex-direction: column;
    gap: 10px;
    margin-top: 16px;
  }

  .hero-slider {
    background: transparent;
    padding: 0;
    margin-top: 16px;
  }
  .slide img { max-width: 150px; }

  .dots {
    position: static;
    flex-direction: row;
    justify-content: center;
    transform: none;
    margin-top: 12px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const hero = document.getElementById('plantHero-{{ section.id }}');
  if (!hero) return;

  const slides = hero.querySelectorAll('.slide');
  const dots = hero.querySelectorAll('.dot');
  let current = 0;

  function show(i) {
    slides.forEach((s, idx) => s.classList.toggle('active', idx === i));
    dots.forEach((d, idx) => d.classList.toggle('active', idx === i));
    current = i;
  }

  dots.forEach(dot => {
    dot.addEventListener('click', () => show(+dot.dataset.index));
  });

  if (slides.length > 1) {
    setInterval(() => {
      show((current + 1) % slides.length);
    }, 4000);
  }
});
</script>
