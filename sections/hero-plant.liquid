{% schema %}
{
  "name": "Hero Plant Exact",
  "settings": [
    { "type": "image_picker", "id": "plant_image", "label": "Plant Image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "We Love helping to your Decorate home plants" },
    { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Patch helps you discover the best plants for your space, delivers them" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "View all items" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ],
  "presets": [
    { "name": "Hero Plant Exact" }
  ]
}
{% endschema %}

<style>
.hero-plant {
  display: flex;
  min-height: 80vh;
  background: #f3f7f4;
}

.hero-plant__left {
  flex: 1;
  padding: 80px 60px;
  background: #ffffff;
}

.hero-plant__right {
  flex: 1;
  background: #eef4f0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.hero-plant__left h1 {
  font-size: 48px;
  line-height: 1.2;
  color: #1f3d1b;
  margin-bottom: 20px;
}

.hero-plant__left h1 span {
  color: #2e7d32;
}

.hero-plant__left p {
  font-size: 16px;
  color: #666;
  max-width: 420px;
}

.hero-plant__btn {
  display: inline-block;
  margin-top: 30px;
  background: #1f3d1b;
  color: #fff;
  padding: 14px 34px;
  border-radius: 6px;
  font-weight: 600;
}

.hero-plant__image img {
  max-width: 360px;
  width: 100%;
  height: auto;
}

.hero-features {
  display: flex;
  gap: 20px;
  margin-top: 60px;
}

.hero-feature {
  background: #fff;
  padding: 18px 22px;
  border-radius: 12px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.05);
  flex: 1;
  font-size: 14px;
  color: #444;
}

.hero-feature strong {
  display: block;
  color: #1f3d1b;
  margin-bottom: 6px;
}

/* Mobile */
@media(max-width: 768px) {
  .hero-plant {
    flex-direction: column;
  }
  .hero-plant__left {
    padding: 40px 20px;
    text-align: center;
  }
  .hero-plant__left h1 {
    font-size: 34px;
  }
  .hero-features {
    flex-direction: column;
    margin-top: 40px;
  }
  .hero-plant__right {
    padding: 30px 0;
  }
}
</style>

<section class="hero-plant">
  <div class="hero-plant__left">
    <h1>
      {{ section.settings.heading | replace: 'plants', '<span>plants</span>' }}
    </h1>
    <p>{{ section.settings.subtext }}</p>
    <a href="{{ section.settings.button_link }}" class="hero-plant__btn">
      {{ section.settings.button_text }}
    </a>

    <div class="hero-features">
      <div class="hero-feature">
        <strong>Light</strong>
        Bright but Indirect Light
      </div>
      <div class="hero-feature">
        <strong>Water</strong>
        Moderate Watering
      </div>
      <div class="hero-feature">
        <strong>Care</strong>
        Easy & Occasional
      </div>
    </div>
  </div>

  <div class="hero-plant__right">
    <div class="hero-plant__image">
      {% if section.settings.plant_image %}
        <img src="{{ section.settings.plant_image | img_url: '600x' }}" alt="Plant">
      {% endif %}
    </div>
  </div>
</section>
