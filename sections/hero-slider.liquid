<div class="hero" data-section-id="{{ section.id }}">
  {% for block in section.blocks %}
    <div class="hero__slide">
      {% if block.settings.image %}
        <img src="{{ block.settings.image | img_url: '1920x' }}" alt="{{ block.settings.title }}" class="hero__image">
      {% endif %}
      <div class="hero__overlay"></div>
      <div class="container">
        <div class="hero__content">
          {% if block.settings.title != blank %}
            <h1 class="hero__title">{{ block.settings.title }}</h1>
          {% endif %}
          {% if block.settings.text != blank %}
            <p class="hero__subtitle">{{ block.settings.text }}</p>
          {% endif %}
          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="btn btn-primary btn-large">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Hero Slider",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Nurture Your Urban Oasis"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Subheading",
          "default": "Premium Plants & Garden Supplies in UAE"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop Collection"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
